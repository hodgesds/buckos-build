load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# xxd - Hexdump utility from Vim
# USE flags: none

download_source(
    name = "xxd-src",
    src_uri = "https://github.com/vim/vim/archive/refs/tags/v9.1.0.tar.gz",
    sha256 = "f6b5a7e8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6",
)

configure_make_package(
    name = "xxd",
    source = ":xxd-src",
    version = "9.1.0",
    description = "Hexdump utility from Vim",
    homepage = "https://www.vim.org/",
    license = "GPL-2+",
    configure_args = [],
    make_args = [
        "-C", "src/xxd",
    ],
    post_install = """
        install -Dm755 src/xxd/xxd "$DESTDIR/usr/bin/xxd"
    """,
    visibility = ["PUBLIC"],
)
