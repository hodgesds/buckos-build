load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "ldns-utils",
    version = "1.8.3",
    src_uri = "https://nlnetlabs.nl/downloads/ldns/ldns-1.8.3.tar.gz",
    sha256 = "f6990f39daf23bc161c14cb2b0d6cd4536867b455b341cf162a1ed7dc4c08839",

    iuse = ["ssl", "dane", "ecdsa"],
    use_defaults = ["ssl", "dane", "ecdsa"],

    use_deps = {
        "ssl": ["//packages/linux/network/openssl:openssl"],
    },

    use_configure = {
        "dane": "--enable-dane",
        "-dane": "--disable-dane",
        "ecdsa": "--enable-ecdsa",
        "-ecdsa": "--disable-ecdsa",
    },

    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--with-drill",
        "--with-examples",
        "--with-ssl=/usr",
        "--disable-static",
    ],

    post_install = """
# The examples build various ldns-* utilities
# Ensure drill is installed
if [ ! -f "$DESTDIR/usr/bin/drill" ]; then
    echo "Warning: drill not found"
fi
""",

    deps = [
        "//packages/linux/network/dns/libraries/ldns:ldns",
    ],

    description = "DNS utility programs from ldns (drill, ldns-*)",
    homepage = "https://nlnetlabs.nl/projects/ldns/",
    license = "BSD-3-Clause",
    visibility = ["PUBLIC"],
)
