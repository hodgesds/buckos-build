load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# doas - Simple sudo alternative from OpenBSD
# USE flags: pam, persist, timestamp-timeout
# Note: OpenDoas uses a simple BSD-style configure script, not autoconf,
# so we need to override src_configure to avoid standard autotools args

autotools_package(
    name = "doas",
    version = "6.8.2",
    src_uri = "https://github.com/Duncaen/OpenDoas/archive/v6.8.2.tar.gz",
    sha256 = "6da058a0e70b7543bc60624389b0b00b686189ec933828c522bf8b2600495a67",
    signature_required = False,
    description = "Simple sudo alternative from OpenBSD",
    homepage = "https://github.com/Duncaen/OpenDoas",
    license = "ISC",
    iuse = ["pam", "persist", "static-libs"],
    use_defaults = [],
    use_deps = {
        "pam": ["//packages/linux/system/security/auth/pam:pam"],
    },
    # Custom src_configure because OpenDoas uses a simple BSD-style configure
    # that doesn't accept standard autotools arguments like --infodir
    src_configure = """
./configure --prefix=/usr --without-pam --without-timestamp
""",
    deps = [],
    visibility = ["PUBLIC"],
)
