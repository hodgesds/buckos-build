load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "ltrace",
    version = "0.7.3",
    src_uri = "https://gitlab.com/cespedes/ltrace/-/archive/ltrace-0.7.3/ltrace-ltrace-0.7.3.tar.gz",
    sha256 = "6b70dd2f6c347d448c2d6140fdb70429d17135e6713ea6c095df1b34e4010e6a",
    description = "Library call tracer",
    homepage = "https://www.ltrace.org/",
    license = "GPL-2+",

    # USE flags this package supports
    iuse = [
        "unwind",
        "debug",
    ],

    # Default USE flags
    use_defaults = [],

    # Conditional configure arguments
    use_configure = {
        "unwind": "--with-libunwind",
        "-unwind": "--without-libunwind",
        "debug": "--enable-debug",
        "-debug": "--disable-debug",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--disable-werror",
    ],

    visibility = ["PUBLIC"],
)
