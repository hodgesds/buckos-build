# Font packages - libraries, tools, and font collections

# Sub-category groups
filegroup(
    name = "libraries",
    srcs = ["//packages/fonts/libraries:all-libraries"],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "tools",
    srcs = ["//packages/fonts/tools:all-tools"],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "collections",
    srcs = ["//packages/fonts/collections:all-collections"],
    visibility = ["PUBLIC"],
)

# Themed groups
filegroup(
    name = "essential",
    srcs = [
        "//packages/fonts/libraries/freetype:freetype",
