  selected_item_pixmap_style = "select_*.png"
}

# Help text
+ label {
  top = 85%
  left = 0
  width = 100%
  height = 20
  align = "center"
  text = "Use ↑ and ↓ to select, Enter to boot"
  color = "#00ff00"
  font = "DejaVu Sans Regular 14"
}

# General settings
title-color: "#00ff00"
title-font: "DejaVu Sans Bold 24"
message-color: "#ffffff"
terminal-box: "terminal_box_*.png"
