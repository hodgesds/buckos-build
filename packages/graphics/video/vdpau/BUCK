)

meson_package(
    name = "libvdpau-va-gl",
    source = ":libvdpau-va-gl-src",
    version = "0.4.0",
    description = "VDPAU driver using OpenGL/VAAPI as backend",
    homepage = "https://github.com/nickel-oern/libvdpau-va-gl",
    license = "MIT",
    meson_args = [],
    deps = [
        ":vdpau",
        "//packages/graphics/video/libva:libva",
    ],
    build_deps = [
        "//packages/core/pkg-config:pkg-config",
    ],
    visibility = ["PUBLIC"],
)
