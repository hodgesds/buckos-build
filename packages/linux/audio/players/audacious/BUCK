load("//defs:package_defs.bzl", "download_source", "meson_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# USE flags for audacious (meson build):
# - gtk: GTK+ interface (default: enabled)
# - qt5: Qt5 interface (default: disabled)
# - dbus: D-Bus support (default: enabled)
# - libarchive: Archive support (default: disabled)


meson_package(
    name = "audacious",
    version = "4.3.1",
    src_uri = "https://distfiles.audacious-media-player.org/audacious-4.3.1.tar.bz2",
    sha256 = "85e9e26841505b51e342ee72a2d05f19bef894f567a029ebb3f3e0c1adb42042",
    description = "Lightweight, advanced audio player focused on audio quality",
    homepage = "https://audacious-media-player.org/",
    license = "BSD-2-Clause",
    meson_args = [
        "-Dgtk=true",
        "-Dqt=false",
        "-Dlibarchive=false",
        "-Ddbus=true",
        "-Dvalgrind=false",
        "-Dbuildstamp=",
    ],
    deps = [
        "//packages/linux/desktop/gnome:gtk3",
        "//packages/linux/system/libs/ipc/dbus:dbus",
    ],
    visibility = ["PUBLIC"],
)
