load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "dnsmasq-src",
    src_uri = "https://thekelleys.org.uk/dnsmasq/dnsmasq-2.90.tar.xz",
    sha256 = "8c09bacabf8c91f7dd4456a5bff4a2e1c7b7c4f0e1b6c4d5e3a2c1b4f8e9d7a6",
)

configure_make_package(
    name = "dnsmasq",
    source = ":dnsmasq-src",
    version = "2.90",
    description = "Lightweight DNS forwarder and DHCP server",
    homepage = "https://thekelleys.org.uk/dnsmasq/doc.html",
    license = "GPL-2.0-or-later",
    pre_configure = """
# dnsmasq doesn't use autoconf
true
""",
    configure_args = [],
    make_args = [
        "PREFIX=/usr",
        "SYSCONFDIR=/etc",
        "LOCALSTATEDIR=/var",
        "COPTS=-DHAVE_DNSSEC -DHAVE_DBUS",
    ],
    env = {
        "DESTDIR": "$DESTDIR",
    },
    post_install = """
install -Dm644 dnsmasq.conf.example "$DESTDIR/etc/dnsmasq.conf"
install -Dm644 trust-anchors.conf "$DESTDIR/usr/share/dnsmasq/trust-anchors.conf"
""",
    deps = [
        "//packages/linux/core:musl",
        "//packages/linux/network/dns/libraries/libidn2:libidn2",
    ],
    visibility = ["PUBLIC"],
)
