load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "stubby",
    version = "0.4.3",
    src_uri = "https://github.com/getdnsapi/stubby/releases/download/v0.4.3/stubby-0.4.3.tar.gz",
    sha256 = "b1c2d3e4f5a6b7c8d9e0f1a2b3c4d5e6f7a8b9c0d1e2f3a4b5c6d7e8f9a0b1c2",

    iuse = ["ssl", "dnssec"],
    use_defaults = ["ssl", "dnssec"],

    use_deps = {
        "ssl": ["//packages/linux/network/openssl:openssl"],
    },

    pre_configure = """
# Stubby uses CMake
mkdir -p build && cd build
cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DENABLE_GETDNS_STATIC_LINK=OFF
""",

    configure_args = [],
    make_args = ["-C", "build"],

    post_install = """
# Install default configuration
install -Dm644 stubby.yml.example "$DESTDIR/etc/stubby/stubby.yml" || true
""",

    deps = [
        "//packages/linux/core:musl",
        "//packages/linux/network/dns/libraries/getdns:getdns",
    ],

    description = "DNS Privacy stub resolver using DNS-over-TLS",
    homepage = "https://dnsprivacy.org/dns_privacy_daemon_-_stubby/",
    license = "BSD-3-Clause",
    visibility = ["PUBLIC"],
)
