# BlueZ - Official Linux Bluetooth protocol stack
# Bluetooth tools and daemons for Linux

load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "bluez-src",
    src_uri = "https://www.kernel.org/pub/linux/bluetooth/bluez-5.72.tar.xz",
    sha256 = "c8d9e0f1a2b3c4d5e6f7a8b9c0d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d9",
)

configure_make_package(
    name = "bluez",
    source = ":bluez-src",
    version = "5.72",
    description = "Official Linux Bluetooth protocol stack",
    homepage = "http://www.bluez.org/",
    license = "GPL-2.0",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--localstatedir=/var",
        "--libexecdir=/usr/lib",
        "--enable-library",
        "--enable-tools",
        "--enable-deprecated",
        "--enable-mesh",
        "--enable-midi",
        "--enable-sixaxis",
    ],
    deps = [
        "//packages/core:musl",
        "//packages/system/libs/dbus:dbus",
        "//packages/system/libs/glib:glib",
        "//packages/system/libs/readline:readline",
        "//packages/system/libs/libical:libical",
    ],
    visibility = ["PUBLIC"],
)
