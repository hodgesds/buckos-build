load("//defs:package_defs.bzl", "download_source", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "msgpack-src",
    src_uri = "https://github.com/msgpack/msgpack-c/releases/download/c-6.0.0/msgpack-c-6.0.0.tar.gz",
    sha256 = "3654f5e2c652dc52e0a993e270bb57d5702b262703f03771c152bba51602aeba",
)

cmake_package(
    name = "msgpack",
    srcs = [":msgpack-src"],
    version = "6.0.0",
    description = "MessagePack implementation for C",
    homepage = "https://msgpack.org/",
    license = "BSL-1.0",
    cmake_args = [
        "-DMSGPACK_BUILD_TESTS=OFF",
        "-DMSGPACK_BUILD_EXAMPLES=OFF",
    ],
    visibility = ["PUBLIC"],
)
