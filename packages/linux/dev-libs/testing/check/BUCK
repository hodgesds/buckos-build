load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "check-src",
    src_uri = "https://github.com/libcheck/check/releases/download/0.15.2/check-0.15.2.tar.gz",
    sha256 = "a8de4e0bacfb4d76dd1c618ded263523b53b85d92a146d8835eb1a52932fa20a",
)

configure_make_package(
    name = "check",
    source = ":check-src",
    version = "0.15.2",
    description = "Unit testing framework for C",
    homepage = "https://libcheck.github.io/check/",
    license = "LGPL-2.1+",
    configure_args = [
        "--disable-static",
    ],
    visibility = ["PUBLIC"],
)
