load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "libao",
    version = "1.2.2",
    src_uri = "https://downloads.xiph.org/releases/ao/libao-1.2.2.tar.gz",
    sha256 = "7892cf7d53027ecb8cdc58937e249677f7a0c6e06b86eb2205f9ab702caf6be3",
    description = "Cross-platform audio output library",
    homepage = "https://www.xiph.org/ao/",
    license = "GPL-2",
    iuse = ["static-libs", "alsa", "pulseaudio", "debug"],
    use_defaults = ["alsa"],
    configure_args = [
        "--prefix=/usr",
        "--enable-alsa-mmap",
        "--disable-arts",
        "--disable-esd",
        "--disable-nas",
        "--disable-wmm",
    ],
    use_configure = {
        "static-libs": "--enable-static",
        "-static-libs": "--disable-static",
        "alsa": "--enable-alsa",
        "-alsa": "--disable-alsa",
        "pulseaudio": "--enable-pulse",
        "-pulseaudio": "--disable-pulse",
        "debug": "--enable-debug",
        "-debug": "--disable-debug",
    },
    use_deps = {
        "alsa": ["//packages/linux/audio/daemons/alsa-lib:alsa-lib"],
        "pulseaudio": ["//packages/linux/audio/daemons/pulseaudio:pulseaudio"],
    },
    deps = [
    ],
    visibility = ["PUBLIC"],
)
