load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# coccinelle - Semantic patching tool for C
download_source(
    name = "coccinelle-src",
    src_uri = "https://coccinelle.gitlabpages.inria.fr/website/distrib/coccinelle-1.1.1.tar.gz",
    sha256 = "a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8",
)

configure_make_package(
    name = "coccinelle",
    source = ":coccinelle-src",
    version = "1.1.1",
    description = "Semantic patching tool for C programs",
    homepage = "https://coccinelle.lip6.fr",
    license = "GPL-2",
    configure_args = [
        "--prefix=/usr",
        "--disable-python",
    ],
    deps = [
        "//packages/linux/core/musl:musl",
        "//packages/linux/lang/ocaml:ocaml",
    ],
    visibility = ["PUBLIC"],
)
