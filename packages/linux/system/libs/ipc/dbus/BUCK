load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

download_source(
    name = "dbus-src",
    src_uri = "https://dbus.freedesktop.org/releases/dbus/dbus-1.14.10.tar.xz",
    sha256 = "ba1f21d2bd9d339da2d4aa8780c09df32fea87998b73da24f49ab9df1e36a50f",
)

configure_make_package(
    name = "dbus",
    source = ":dbus-src",
    version = "1.14.10",
    description = "Message bus system",
    homepage = "https://www.freedesktop.org/wiki/Software/dbus/",
    license = "AFL-2.1",
    configure_args = [
        "--disable-static",
        "--disable-doxygen-docs",
        "--disable-xml-docs",
        "--disable-systemd",
        "--with-system-socket=/run/dbus/system_bus_socket",
        "--with-console-auth-dir=/run/console",
        "--localstatedir=/var",
        "--runstatedir=/run",
    ],
    deps = [
        "//packages/linux/system/libs/data/expat:expat",
    ],
    visibility = ["PUBLIC"],
)
