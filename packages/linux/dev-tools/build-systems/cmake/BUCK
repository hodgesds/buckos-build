load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# =============================================================================
# CMake - Cross-platform build system
# =============================================================================
# NOTE: cmake uses its own bootstrap script, not autotools.
# We use custom src_configure/src_compile/src_install phases.

autotools_package(
    name = "cmake",
    version = "4.2.0",
    src_uri = "https://github.com/Kitware/CMake/releases/download/v4.2.0/cmake-4.2.0.tar.gz",
    sha256 = "4104e94657d247c811cb29985405a360b78130b5d51e7f6daceb2447830bd579",
    auto_detect_signature = False,  # Signature key not in keyring
    description = "Cross-platform, open-source build system",
    homepage = "https://cmake.org/",
    license = "BSD-3-Clause",

    # CMAKE uses its own bootstrap script, not autotools configure
    src_configure = """
echo "=== Configuring cmake with bootstrap ==="
./bootstrap \\
    --prefix=/usr \\
    --system-curl \\
    --system-zlib \\
    --system-expat \\
    --parallel=$(nproc) \\
    --no-qt-gui \\
    -- -DCMAKE_USE_OPENSSL=ON
""",

    src_compile = """
echo "=== Building cmake ==="
make -j$(nproc)
""",

    src_install = """
echo "=== Installing cmake ==="
make install DESTDIR="$DESTDIR"
""",

    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/core/expat:expat",
        "//packages/linux/network/curl:curl",
        "//packages/linux/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
