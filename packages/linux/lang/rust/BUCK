load("//defs:package_defs.bzl", "download_source", "autotools_package", "binary_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

# =============================================================================
# Rust - Systems programming language
# =============================================================================

download_source(
    name = "rust-src",
    src_uri = "https://static.rust-lang.org/dist/rustc-1.75.0-src.tar.xz",
    sha256 = "4526f786d673e4859ff2afa0bab2ba13c918b796519a25c1acce06dba9542340",
)

binary_package(
    name = "rust",
    srcs = [":rust-src"],
    version = "1.75.0",
    description = "Rust is a systems programming language focused on safety, speed, and concurrency",
    homepage = "https://www.rust-lang.org/",
    license = "Apache-2.0 AND MIT",
    install_script = """
        cd $SRCS/rustc-1.75.0-src

        # Configure Rust build
        cat > config.toml << 'EOF'
[llvm]
link-shared = true

[build]
docs = false
extended = true
tools = ["cargo", "rustfmt", "clippy"]

[install]
prefix = "/usr"

[rust]
channel = "stable"
codegen-units = 1
EOF

        # Build and install
        python3 x.py build
        DESTDIR=$OUT python3 x.py install
    """,
    deps = [
        "//packages/linux/lang/python:python",
    ],
    visibility = ["PUBLIC"],
)
