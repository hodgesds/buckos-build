load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "lcov-src",
    src_uri = "https://github.com/linux-test-project/lcov/releases/download/v2.0/lcov-2.0.tar.gz",
    sha256 = "1857bb18c87ab7ce8f8f8d1e3d9e4f5a6b7c8d9e0f1a2b3c4d5e6f7a8b9c0d1e",
)

configure_make_package(
    name = "lcov",
    source = ":lcov-src",
    version = "2.0",
    description = "Graphical front-end for GCC's coverage testing tool gcov",
    homepage = "https://github.com/linux-test-project/lcov",
    license = "GPL-2+",
    visibility = ["PUBLIC"],
)
