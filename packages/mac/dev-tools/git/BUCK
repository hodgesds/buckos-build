load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")
load("//defs:platform_defs.bzl", "PLATFORM_MACOS")

autotools_package(
    name = "git",
    version = "2.47.0",
    src_uri = "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.47.0.tar.xz",
    sha256 = "1ce114da88704271b43e027c51e04d9399f8c88e9ef7542dae7aebae7d87bc4e",
    description = "Fast, scalable, distributed revision control system",
    homepage = "https://git-scm.com/",
    license = "GPL-2",

    # USE flags this package supports
    iuse = [
        "curl",
        "perl",
        "python",
        "pcre2",
        "nls",
    ],

    # Default USE flags
    use_defaults = ["curl", "perl", "pcre2"],

    # Conditional dependencies
    use_deps = {
        "curl": ["//packages/mac/network/curl:curl"],
    },

    # Conditional configure arguments
    use_configure = {
        "curl": "--with-curl",
        "-curl": "--without-curl",
        "perl": "--with-perl=/usr/bin/perl",
        "-perl": "--without-perl",
        "python": "--with-python=/usr/bin/python3",
        "-python": "--without-python",
        "pcre2": "--with-libpcre2",
        "-pcre2": "--without-libpcre2",
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--with-expat",
        "--with-openssl",
        "--with-zlib",
    ],

    make_args = [
        "prefix=/usr/local",
        "gitexecdir=/usr/local/libexec/git-core",
        "NO_CROSS_DIRECTORY_HARDLINKS=1",
        "NO_INSTALL_HARDLINKS=1",
    ],
    install_target = "install",
    deps = [
        "//packages/mac/core/zlib:zlib",
        "//packages/mac/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
