load("//defs:package_defs.bzl", "download_source", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "capnproto-src",
    src_uri = "https://capnproto.org/capnproto-c++-1.0.2.tar.gz",
    sha256 = "3f45330ab25c tried6d1e8e1df6d1e7df8ebb9fc2d3f4ee2f83f05e4f8f8e3f9f",
)

cmake_package(
    name = "capnproto",
    srcs = [":capnproto-src"],
    version = "1.0.2",
    description = "Fast data interchange format and capability-based RPC system",
    homepage = "https://capnproto.org/",
    license = "MIT",
    cmake_args = [
        "-DBUILD_TESTING=OFF",
    ],
    deps = [
        "//packages/linux/system/libs/crypto/openssl:openssl",
        "//packages/linux/core/zlib:zlib",
    ],
    visibility = ["PUBLIC"],
)
