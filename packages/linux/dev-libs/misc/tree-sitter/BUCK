    src_uri = "https://github.com/tree-sitter/tree-sitter/archive/refs/tags/v0.22.6.tar.gz",
    sha256 = "e2b687f74358ab6404730b7fb1a1ced7c3f8f4fb4e8be1f02a5166b0d69aca80",
)

binary_package(
    name = "tree-sitter",
    source = ":tree-sitter-src",
