# Input Libraries aggregator

filegroup(
    name = "core-input",
    srcs = [
        "//packages/linux/system/libs/input/libevdev:libevdev",
        "//packages/linux/system/libs/input/mtdev:mtdev",
        "//packages/linux/system/libs/input/libinput:libinput",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "keyboard",
    srcs = [
