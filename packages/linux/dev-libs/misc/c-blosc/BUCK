load("//defs:package_defs.bzl", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

cmake_package(
    name = "c-blosc",
    version = "1.21.5",
    src_uri = "https://github.com/Blosc/c-blosc/archive/refs/tags/v1.21.5.tar.gz",
    sha256 = "32e61961bbf81ffea6ff30e9d70fca36c86178afd3e3cfa13376adec8c687509",
    description = "High performance compressor optimized for binary data",
    homepage = "https://www.blosc.org/",
    license = "BSD-3-Clause",
    cmake_args = [
        "-DCMAKE_POLICY_VERSION_MINIMUM=3.5",
        "-DBUILD_SHARED=ON",
        "-DBUILD_STATIC=OFF",
        "-DBUILD_TESTS=OFF",
        "-DBUILD_BENCHMARKS=OFF",
        "-DPREFER_EXTERNAL_ZLIB=ON",
        "-DPREFER_EXTERNAL_ZSTD=ON",
        "-DPREFER_EXTERNAL_LZ4=ON",
        "-DPREFER_EXTERNAL_SNAPPY=ON",
    ],
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/system/libs/compression/zstd:zstd",
        "//packages/linux/system/libs/compression/lz4:lz4",
        "//packages/linux/system/libs/compression/snappy:snappy",
    ],
    visibility = ["PUBLIC"],
)
