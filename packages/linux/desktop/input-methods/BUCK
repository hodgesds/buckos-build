# Filegroup for all input method packages
filegroup(
    name = "input-methods",
    srcs = [
        ":ibus",
        ":fcitx5",
        ":fcitx5-gtk",
        ":fcitx5-qt",
    ],
    default_target_platform = "//platforms:default",
    visibility = ["PUBLIC"],
)

# Filegroup for complete CJK support
filegroup(
    name = "input-methods-cjk",
    srcs = [
        ":input-methods",
        ":fcitx5-chinese-addons",
        ":ibus-anthy",
        ":ibus-libpinyin",
        ":ibus-hangul",
    ],
    default_target_platform = "//platforms:default",
    visibility = ["PUBLIC"],
)
