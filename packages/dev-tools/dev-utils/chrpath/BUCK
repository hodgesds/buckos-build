    name = "chrpath-src",
    src_uri = "https://github.com/nickg/chrpath/archive/refs/tags/v0.16.tar.gz",
    sha256 = "c3e9f5e6d7a8b9c0d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d9e0f1a2b3c4",
)

