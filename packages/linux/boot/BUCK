# Boot loader packages
filegroup(
    name = "all-bootloaders",
    srcs = [
        "//packages/linux/boot/grub:grub",
        "//packages/linux/boot/syslinux:syslinux",
    ],
    default_target_platform = "//platforms:linux-target",
    visibility = ["PUBLIC"],
)

