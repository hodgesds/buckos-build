load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "cvs",
    version = "1.12.13",
    src_uri = "https://mirrors.kernel.org/non-gnu/cvs/source/feature/1.12.13/cvs-1.12.13.tar.bz2",
    sha256 = "38bef8cb64da496d6b9f6fc74514c4f785015a7fbd235468f5dde039a77a2fbd",
    description = "Concurrent Versions System - source code revision control tools",
    homepage = "https://cvs.nongnu.org/",
    license = "GPL-2",

    # USE flags this package supports
    iuse = [
        "kerberos",
        "nls",
    ],

    # Default USE flags
    use_defaults = [],

    # Conditional configure arguments
    use_configure = {
        "kerberos": "--with-gssapi",
        "-kerberos": "--without-gssapi",
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--with-external-zlib",
    ],

    deps = [
        "//packages/linux/core/zlib:zlib",
    ],
    visibility = ["PUBLIC"],
)
