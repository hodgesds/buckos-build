load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "diffutils",
    version = "3.10",
    src_uri = "https://ftp.gnu.org/gnu/diffutils/diffutils-3.10.tar.xz",
    sha256 = "90e5e93cc724e4ebe12ede80df1634063c7a855f5cdafaea7f5a24e796f4fab0",
    description = "GNU diff utilities - find differences between files",
    homepage = "https://www.gnu.org/software/diffutils/",
    license = "GPL-3+",

    # USE flags this package supports
    iuse = [
        "nls",
    ],

    # Default USE flags
    use_defaults = ["nls"],

    # Conditional configure arguments
    use_configure = {
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
    },

    visibility = ["PUBLIC"],
)
