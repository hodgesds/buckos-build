load("//defs:package_defs.bzl", "download_source", "cmake_package")

download_source(
    name = "c-blosc-src",
    src_uri = "https://github.com/Blosc/c-blosc/archive/refs/tags/v1.21.5.tar.gz",
    sha256 = "32e61961bbf81ffea6ff30e9d70fca36c86178afd3e3e65c45d3dd0e2141ca08",
)

cmake_package(
    name = "c-blosc",
    source = ":c-blosc-src",
    version = "1.21.5",
    description = "High performance compressor optimized for binary data",
    homepage = "https://www.blosc.org/",
    license = "BSD-3-Clause",
    cmake_args = [
        "-DBUILD_SHARED=ON",
        "-DBUILD_STATIC=OFF",
        "-DBUILD_TESTS=OFF",
        "-DBUILD_BENCHMARKS=OFF",
        "-DPREFER_EXTERNAL_ZLIB=ON",
        "-DPREFER_EXTERNAL_ZSTD=ON",
        "-DPREFER_EXTERNAL_LZ4=ON",
        "-DPREFER_EXTERNAL_SNAPPY=ON",
    ],
    deps = [
        "//packages/linux/core/zlib",
        "//packages/linux/system/libs/compression/zstd",
        "//packages/linux/system/libs/compression/lz4",
        "//packages/linux/system/libs/compression/snappy",
    ],
    visibility = ["PUBLIC"],
)
