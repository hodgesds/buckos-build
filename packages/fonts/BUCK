        "//packages/fonts/libraries/harfbuzz:harfbuzz",
        "//packages/fonts/collections:essential-fonts",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "development",
    srcs = [
        "//packages/fonts/libraries:all-libraries",
