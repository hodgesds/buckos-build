# Network utilities and libraries for macOS

filegroup(
    name = "all-network",
    srcs = [
        "//packages/mac/network/openssl:openssl",
        "//packages/mac/network/ca-certificates:ca-certificates",
        "//packages/mac/network/curl:curl",
        "//packages/mac/network/wget:wget",
        "//packages/mac/network/openssh:openssh",
    ],
    default_target_platform = "//platforms:macos-target",
    visibility = ["PUBLIC"],
)

