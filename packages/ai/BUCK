# =============================================================================
# AI/ML Tools - Machine Learning and AI inference packages for Linux
# =============================================================================
#
# This category contains tools for running AI models locally, including:
# - Large Language Models (LLMs)
# - Speech recognition
# - Image generation
# - Model serving infrastructure
#
# =============================================================================

# All AI packages
filegroup(
    name = "ai",
    srcs = [
        "//packages/ai/ollama:ollama",
        "//packages/ai/llama-cpp:llama-cpp",
        "//packages/ai/whisper-cpp:whisper-cpp",
        "//packages/ai/stable-diffusion-cpp:stable-diffusion-cpp",
    ],
    visibility = ["PUBLIC"],
)

# LLM inference packages
filegroup(
    name = "llm-inference",
    srcs = [
        "//packages/ai/ollama:ollama",
        "//packages/ai/llama-cpp:llama-cpp",
    ],
    visibility = ["PUBLIC"],
)

# Multimodal AI packages (speech, image, etc.)
filegroup(
    name = "multimodal",
    srcs = [
        "//packages/ai/whisper-cpp:whisper-cpp",
        "//packages/ai/stable-diffusion-cpp:stable-diffusion-cpp",
    ],
    visibility = ["PUBLIC"],
)

# Convenience aliases for common packages
alias(
    name = "ollama",
    actual = "//packages/ai/ollama:ollama",
    visibility = ["PUBLIC"],
)

alias(
    name = "llama-cpp",
    actual = "//packages/ai/llama-cpp:llama-cpp",
    visibility = ["PUBLIC"],
)

alias(
    name = "whisper-cpp",
    actual = "//packages/ai/whisper-cpp:whisper-cpp",
    visibility = ["PUBLIC"],
)

alias(
    name = "stable-diffusion-cpp",
    actual = "//packages/ai/stable-diffusion-cpp:stable-diffusion-cpp",
    visibility = ["PUBLIC"],
)
