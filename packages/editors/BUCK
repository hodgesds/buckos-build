# Filegroup for all editors
filegroup(
    name = "all-editors",
    srcs = [
        "//packages/editors/vim",
        "//packages/editors/vim-minimal",
        "//packages/editors/neovim",
        "//packages/editors/emacs",
        "//packages/editors/emacs-nox",
    ],
    visibility = ["PUBLIC"],
)

# Filegroup for vim variants
filegroup(
    name = "vim-editors",
    srcs = [
        "//packages/editors/vim",
        "//packages/editors/vim-minimal",
        "//packages/editors/neovim",
    ],
    visibility = ["PUBLIC"],
)

# Filegroup for minimal editors
filegroup(
    name = "minimal-editors",
    srcs = [
        "//packages/editors/vim-minimal",
        "//packages/editors/emacs-nox",
    ],
    visibility = ["PUBLIC"],
)
