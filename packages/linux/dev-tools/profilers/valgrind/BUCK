load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "valgrind",
    version = "3.22.0",
    src_uri = "https://sourceware.org/pub/valgrind/valgrind-3.22.0.tar.bz2",
    sha256 = "c811db5add2c5f729944caf47c4e7a65dcaabb9461e472b578765dd7bf6d2d4c",
    auto_detect_signature=False,
    description = "Instrumentation framework for building dynamic analysis tools",
    homepage = "https://valgrind.org/",
    license = "GPL-2+",

    # USE flags this package supports
    iuse = [
        "lto",
        "mpi",
    ],

    # Default USE flags
    use_defaults = ["lto"],

    # Conditional configure arguments
    use_configure = {
        "lto": "--enable-lto",
        "-lto": "--disable-lto",
        "mpi": "--enable-mpi",
        "-mpi": "--disable-mpi",
    },

    visibility = ["PUBLIC"],
)
