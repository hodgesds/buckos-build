load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "elfutils",
    version = "0.191",
    src_uri = "https://sourceware.org/elfutils/ftp/0.191/elfutils-0.191.tar.bz2",
    sha256 = "c5e830f52f45df4c314c01acb6f6a0dccdfabb0cbf6ad3465133a330b4d8c1b2",
    description = "Collection of utilities and libraries to read, create and modify ELF files",
    homepage = "https://sourceware.org/elfutils/",
    license = "GPL-2+ LGPL-3+",

    iuse = ["nls", "debuginfod"],
    use_defaults = ["nls"],
    use_configure = {
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
        "debuginfod": "--enable-debuginfod",
        "-debuginfod": "--disable-debuginfod --disable-libdebuginfod",
    },

    visibility = ["PUBLIC"],
)
