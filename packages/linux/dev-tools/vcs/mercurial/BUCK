load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "mercurial-src",
    src_uri = "https://www.mercurial-scm.org/release/mercurial-6.6.tar.gz",
    sha256 = "a50e253f09ddd94d1512ee3cf820b95b39aa31cbb3b43caac4a44658a61e9449",
)

configure_make_package(
    name = "mercurial",
    source = ":mercurial-src",
    version = "6.6",
    description = "Scalable distributed SCM tool",
    homepage = "https://www.mercurial-scm.org/",
    license = "GPL-2+",
    make_args = [
        "PREFIX=/usr",
        "PYTHON=/usr/bin/python3",
    ],
    install_target = "install",
    deps = [
        "//packages/linux/lang/python:python",
    ],
    visibility = ["PUBLIC"],
)
