load("//defs:package_defs.bzl", "download_source", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "utf8proc-src",
    src_uri = "https://github.com/JuliaStrings/utf8proc/archive/refs/tags/v2.9.0.tar.gz",
    sha256 = "bd215d04313b5bc42c1abedbcb0a6574667e31acee1085c40e0a3c0f6cf01c89",
)

cmake_package(
    name = "utf8proc",
    source = ":utf8proc-src",
    version = "2.9.0",
    description = "Clean C library for processing UTF-8 Unicode data",
    homepage = "https://github.com/JuliaStrings/utf8proc",
    license = "MIT",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
    ],
    visibility = ["PUBLIC"],
)
