load("//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

cmake_package(
    name = "bear",
    version = "3.1.4",
    src_uri = "https://github.com/rizsotto/Bear/archive/refs/tags/3.1.4.tar.gz",
    sha256 = "a1105023795b3e1b9abc29c088cdec5464cc9f3b640b5078dc90a505498da5ff",
    signature_required = False,
    description = "Tool that generates a compilation database for clang tooling",
    homepage = "https://github.com/rizsotto/Bear",
    license = "GPL-3+",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DENABLE_UNIT_TESTS=OFF",
        "-DENABLE_FUNC_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
