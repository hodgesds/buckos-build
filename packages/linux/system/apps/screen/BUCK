load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# screen - Terminal multiplexer with detach capability
# USE flags: pam, multiuser, selinux

autotools_package(
    name = "screen",
    version = "4.9.1",
    src_uri = "https://mirrors.kernel.org/gnu/screen/screen-4.9.1.tar.gz",
    sha256 = "636976f5bbc149cc214f8048634cfa05e1fda003f08865f262f8d7a31738f135",
    description = "GNU screen terminal multiplexer",
    homepage = "https://www.gnu.org/software/screen",
    license = "GPL-3+",
    iuse = ["pam", "multiuser", "selinux", "debug"],
    use_defaults = [],
    use_deps = {
        "pam": ["//packages/linux/system/security/auth/pam:pam"],
        "selinux": ["//packages/linux/system/security/selinux:selinux"],
    },
    use_configure = {
        "pam": "--enable-pam",
        "-pam": "--disable-pam",
        "multiuser": "--enable-socket-dir",
        "-multiuser": "--disable-socket-dir",
        "selinux": "--enable-selinux",
        "-selinux": "--disable-selinux",
        "debug": "--enable-debug",
        "-debug": "--disable-debug",
    },
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
    ],
    deps = [
        "//packages/linux/core/ncurses:ncurses",
    ],
    visibility = ["PUBLIC"],
)
