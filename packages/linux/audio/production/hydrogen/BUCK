load("//defs:package_defs.bzl", "download_source", "cmake_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# FIXME: This package requires Qt5 which is not yet available in the build system
# Dependencies: //packages/linux/desktop/qt:qt5 (does not exist)
# Status: Disabled until Qt5 is implemented

# USE flags for hydrogen (cmake build):
# - alsa: ALSA support (default: enabled)
# - jack: JACK support (default: disabled)
# - pulseaudio: PulseAudio support (default: disabled)
# - ladspa: LADSPA plugin support (default: enabled)
# - qt5: Qt5 interface (default: enabled)

cmake_package(
    name = "hydrogen",
    version = "1.2.3",
    src_uri = "https://github.com/hydrogen-music/hydrogen/archive/refs/tags/1.2.3.tar.gz",
    sha256 = "47b374ca162538b4fd6bc042721f9c6ac60b8c0fec5e8b1a2ac885d8bb56b753",
    signature_required = False,
    description = "Advanced drum machine for GNU/Linux",
    homepage = "http://hydrogen-music.org/",
    license = "GPL-2",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DWANT_ALSA=ON",
        "-DWANT_CPPUNIT=OFF",
        "-DWANT_DEBUG=OFF",
        "-DWANT_JACK=OFF",
        "-DWANT_LADSPA=ON",
        "-DWANT_LASH=OFF",
        "-DWANT_LIBARCHIVE=OFF",
        "-DWANT_LRDF=OFF",
        "-DWANT_OSS=OFF",
        "-DWANT_PORTAUDIO=OFF",
        "-DWANT_PORTMIDI=OFF",
        "-DWANT_PULSEAUDIO=OFF",
        "-DWANT_RUBBERBAND=OFF",
        "-DWANT_SHARED=ON",
    ],
    deps = [
        "//packages/linux/audio/daemons/alsa-lib:alsa-lib",
        # "//packages/linux/desktop/qt:qt5",  # FIXME: Qt5 not yet implemented
    ],
    visibility = ["PUBLIC"],
)
