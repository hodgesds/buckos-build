load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "git-src",
    src_uri = "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.43.0.tar.xz",
    sha256 = "5446603e73d911781571f97c95543389c41b62a5c46678e49b77c9a86a1b8787",
)

configure_make_package(
    name = "git",
    source = ":git-src",
    version = "2.43.0",
    description = "Fast, scalable, distributed revision control system",
    homepage = "https://git-scm.com/",
    license = "GPL-2",
    configure_args = [
        "--with-curl",
        "--with-expat",
        "--with-openssl",
        "--with-perl=/usr/bin/perl",
        "--with-python=/usr/bin/python3",
        "--with-zlib",
    ],
    make_args = [
        "prefix=/usr",
        "gitexecdir=/usr/libexec/git-core",
        "NO_CROSS_DIRECTORY_HARDLINKS=1",
        "NO_INSTALL_HARDLINKS=1",
    ],
    install_target = "install",
    deps = [
        "//packages/core/zlib:zlib",
        "//packages/network/curl:curl",
        "//packages/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
