load("//defs:package_defs.bzl", "download_source", "cmake_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# FIXME: This package requires Qt5 which is not yet available in the build system
# Dependencies: //packages/linux/desktop/qt:qt5 (does not exist)
# Status: Disabled until Qt5 is implemented

# USE flags for sonic-pi (cmake build):
# - alsa: ALSA support (default: enabled)
# - jack: JACK support (default: enabled)
# - qt5: Qt5 interface (default: enabled)
# - nls: Native language support (default: disabled)

cmake_package(
    name = "sonic-pi",
    version = "4.5.1",
    src_uri = "https://github.com/sonic-pi-net/sonic-pi/archive/refs/tags/v4.5.1.tar.gz",
    sha256 = "77c5e859f9b6fdf2a00bc88a087062484458d6d98b45c29c9e5fad36dbf55cbf",
    description = "Live coding music synthesizer for everyone",
    homepage = "https://sonic-pi.net/",
    license = "MIT",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBUILD_TRANSLATIONS=OFF",
    ],
    deps = [
        "//packages/linux/audio/daemons/alsa-lib:alsa-lib",
        "//packages/linux/audio/daemons/jack2:jack2",
        # "//packages/linux/desktop/qt:qt5",  # FIXME: Qt5 not yet implemented
        "//packages/linux/lang/ruby:ruby",
    ],
    visibility = ["PUBLIC"],
)
