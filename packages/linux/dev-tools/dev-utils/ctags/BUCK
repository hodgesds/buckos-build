load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "ctags",
    version = "6.1.0",
    src_uri = "https://github.com/universal-ctags/ctags/releases/download/v6.1.0/universal-ctags-6.1.0.tar.gz",
    sha256 = "8f0c8ccb9e6a8ebaa18f7d9c8b6bff5f5e7e0e3b4d5c6f7a8b9c0d1e2f3a4b5c",
    description = "Universal Ctags - generates tag files for source code",
    homepage = "https://ctags.io/",
    license = "GPL-2+",

    # USE flags this package supports
    iuse = [
        "json",
        "yaml",
        "xml",
        "pcre2",
    ],

    # Default USE flags
    use_defaults = ["json", "yaml"],

    # Conditional configure arguments
    use_configure = {
        "json": "--enable-json",
        "-json": "--disable-json",
        "yaml": "--enable-yaml",
        "-yaml": "--disable-yaml",
        "xml": "--enable-xml",
        "-xml": "--disable-xml",
        "pcre2": "--enable-pcre2",
        "-pcre2": "--disable-pcre2",
    },

    visibility = ["PUBLIC"],
)
