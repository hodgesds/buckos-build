load("//defs:package_defs.bzl", "download_source", "autotools_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "libcap-src",
    src_uri = "https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/libcap-2.70.tar.xz",
    sha256 = "23a6ef8aadaf1e3e875f633bb2d116cfef8952dba7bc7c569b13458e1952b30f",
)

autotools_package(
    name = "libcap",
    source = ":libcap-src",
    version = "2.70",
    description = "POSIX capabilities library",
    homepage = "https://sites.google.com/site/fullycapable/",
    license = "BSD-3-Clause",
    configure_args = [],
    make_args = [
        "prefix=/usr",
        "lib=lib",
        "RAISE_SETFCAP=no",
    ],
    visibility = ["PUBLIC"],
)
