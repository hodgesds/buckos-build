    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DSTATIC_LINK=OFF",
        "-DENABLE_DOCUMENTATION=OFF",
