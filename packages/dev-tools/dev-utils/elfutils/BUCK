load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "elfutils-src",
    src_uri = "https://sourceware.org/elfutils/ftp/0.191/elfutils-0.191.tar.bz2",
    sha256 = "df76db71366d1d708365fc7a6c60ca48398f14367eb2b8954efc8897147ad871",
)

configure_make_package(
    name = "elfutils",
    source = ":elfutils-src",
    version = "0.191",
    description = "Collection of utilities and libraries to read, create and modify ELF files",
    homepage = "https://sourceware.org/elfutils/",
    license = "GPL-2+ LGPL-3+",
    configure_args = [
        "--disable-debuginfod",
        "--disable-libdebuginfod",
    ],
    visibility = ["PUBLIC"],
)
