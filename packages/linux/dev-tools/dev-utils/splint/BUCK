load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "splint-src",
    src_uri = "https://github.com/splintchecker/splint/releases/download/splint-3.1.2/splint-3.1.2.src.tgz",
    sha256 = "0019dfc4b32d63c1392aa264aed2253c1e0c2fb09216f8e2cc269bbfb8bb49b5",
)

configure_make_package(
    name = "splint",
    source = ":splint-src",
    version = "3.1.2",
    description = "A tool for statically checking C programs for security vulnerabilities",
    homepage = "https://splint.org/",
    license = "GPL-2+",
    visibility = ["PUBLIC"],
)
