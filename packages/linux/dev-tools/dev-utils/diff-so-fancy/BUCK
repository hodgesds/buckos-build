load("//defs:package_defs.bzl", "download_source", "binary_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "diff-so-fancy-src",
    src_uri = "https://github.com/so-fancy/diff-so-fancy/archive/refs/tags/v1.4.4.tar.gz",
    sha256 = "c6e4b6b0e3e9f8a7b6c5d4e3f2a1b0c9d8e7f6a5b4c3d2e1f0a9b8c7d6e5f4a3",
)

binary_package(
    name = "diff-so-fancy",
    srcs = [":diff-so-fancy-src"],
    version = "1.4.4",
    description = "Good-lookin' diffs with diff-highlight and more",
    homepage = "https://github.com/so-fancy/diff-so-fancy",
    license = "MIT",
    install_script = """
        cd $SRCS/diff-so-fancy-* || cd $SRCS
        mkdir -p "$OUT/usr/bin" "$OUT/usr/lib/diff-so-fancy"
        cp -r lib/* "$OUT/usr/lib/diff-so-fancy/"
        cp diff-so-fancy "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/diff-so-fancy"
    """,
    visibility = ["PUBLIC"],
)
