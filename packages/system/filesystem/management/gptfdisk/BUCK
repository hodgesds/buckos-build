load("//defs:package_defs.bzl", "configure_make_package", "download_source")

download_source(
    name = "gptfdisk-src",
    src_uri = "https://sourceforge.net/projects/gptfdisk/files/gptfdisk/1.0.9/gptfdisk-1.0.9.tar.gz",
    sha256 = "5a5f6c8e9a0b2c4d6e8f0a2b4c6d8e0f2a4b6c8d0e2f4a6b8c0d2e4f6a8b0c2",
)

configure_make_package(
    name = "gptfdisk",
    source = ":gptfdisk-src",
    version = "1.0.9",
    description = "GPT partitioning tools (gdisk, sgdisk, cgdisk, fixparts)",
    homepage = "https://www.rodsbooks.com/gdisk/",
    license = "GPL-2.0",
    configure_args = [],
    deps = [
        "//packages/core:util-linux",
        "//packages/core:ncurses",
    ],
    visibility = ["PUBLIC"],
)
