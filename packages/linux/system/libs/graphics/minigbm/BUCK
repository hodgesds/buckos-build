load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# NOTE: The minigbm source URL points to a live Git branch (main) which means
# the archive content and SHA256 checksum change frequently as new commits are pushed.
# This checksum will need to be updated regularly or the source should be pinned to a specific commit.
download_source(
    name = "minigbm-src",
    src_uri = "https://chromium.googlesource.com/chromiumos/platform/minigbm/+archive/refs/heads/main.tar.gz",
    sha256 = "d937e40710ab55c6feac48e27378f8eabb15c1e2b8a24a652b45e585af59edae",
)

autotools_package(
    name = "minigbm",
    source = ":minigbm-src",
    version = "main",
    description = "Mini GBM implementation for ChromeOS",
    homepage = "https://chromium.googlesource.com/chromiumos/platform/minigbm",
    license = "BSD-3-Clause",
    configure_args = [],
    make_args = [
        "DESTDIR=$DESTDIR",
        "PREFIX=/usr",
        "LIBDIR=/usr/lib",
    ],
    deps = [
        "//packages/linux/desktop/libdrm:libdrm",
    ],
    visibility = ["PUBLIC"],
)
