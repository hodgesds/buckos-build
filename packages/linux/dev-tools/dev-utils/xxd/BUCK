load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

# xxd - Hexdump utility from Vim
# USE flags: none

download_source(
    name = "xxd-src",
    src_uri = "https://github.com/vim/vim/archive/refs/tags/v9.1.0.tar.gz",
    sha256 = "ddb435f6e386c53799a3025bdc5a3533beac735a0ee596cb27ada97366a1c725",
    signature_required = False,
)

autotools_package(
    name = "xxd",
    source = ":xxd-src",
    version = "9.1.0",
    description = "Hexdump utility from Vim",
    homepage = "https://www.vim.org/",
    license = "GPL-2+",
    configure_args = [],
    make_args = [
        "-C", "src/xxd",
    ],
    post_install = """
        install -Dm755 src/xxd/xxd "$DESTDIR/usr/bin/xxd"
    """,
    visibility = ["PUBLIC"],
)
