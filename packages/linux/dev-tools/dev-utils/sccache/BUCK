load("//defs:package_defs.bzl", "download_source", "binary_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "sccache-src",
    src_uri = "https://github.com/mozilla/sccache/releases/download/v0.8.1/sccache-v0.8.1-x86_64-unknown-linux-musl.tar.gz",
    sha256 = "b1c2d3e4f5a6789abcdef0123456789abcdef0123456789abcdef0123456789ab",
)

binary_package(
    name = "sccache",
    srcs = [":sccache-src"],
    version = "0.8.1",
    description = "Shared compilation cache with cloud storage support",
    homepage = "https://github.com/mozilla/sccache",
    license = "Apache-2.0",
    install_script = """
        mkdir -p "$OUT/usr/bin"
        cp $SRCS/sccache-v0.8.1-x86_64-unknown-linux-musl/sccache "$OUT/usr/bin/"
        chmod +x "$OUT/usr/bin/sccache"
    """,
    visibility = ["PUBLIC"],
)
