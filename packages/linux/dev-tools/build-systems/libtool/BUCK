load("//defs:package_defs.bzl", "download_source", "ebuild_package")
load("//defs:eclasses.bzl", "inherit")
load("//defs:use_flags.bzl", "set_use_flags")

# Libtool cannot use autotools_package because it would create a circular dependency
# (autotools eclass depends on libtool). Build it manually instead.
download_source(
    name = "libtool-src",
    src_uri = "https://mirrors.kernel.org/gnu/libtool/libtool-2.4.7.tar.xz",
    sha256 = "4f7f217f057ce655ff22559ad221a0fd8ef84ad1fc5fcb6990cecc333aa1635d",
    signature_sha256 = "595c23d4681ad6c5fc40ddbc0af85b54c008968000c902ebb216af44a71fe81d",
    signature_required = False,
)

ebuild_package(
    name = "libtool",
    source = ":libtool-src",
    version = "2.4.7",
    category = "dev-tools/build-systems",
    slot = "0",
    description = "Generic library support script",
    homepage = "https://www.gnu.org/software/libtool/",
    license = "GPL-2+",

    src_configure = '''
./configure \\
    --prefix=/usr \\
    --build=$(gcc -dumpmachine) \\
    --host=$(gcc -dumpmachine) \\
    --mandir=/usr/share/man \\
    --infodir=/usr/share/info \\
    --datadir=/usr/share \\
    --sysconfdir=/etc \\
    --localstatedir=/var \\
    --libdir=/usr/lib64 \\
    --disable-static
''',

    src_compile = '''
make -j$(nproc)
''',

    src_install = '''
make DESTDIR="$DESTDIR" install
''',

    # No dependencies - libtool is a bootstrap package that must build without
    # depending on automake/autoconf (which themselves depend on libtool via autotools eclass)
    depend = [],
    visibility = ["PUBLIC"],
)
