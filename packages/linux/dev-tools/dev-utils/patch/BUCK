load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "patch",
    version = "2.7.6",
    src_uri = "https://mirrors.kernel.org/gnu/patch/patch-2.7.6.tar.xz",
    sha256 = "ac610bda97abe0d9f6b7c963255a11dcb196c25e337c61f94e4778d632f1d8fd",
    auto_detect_signature=False,
    description = "Apply a diff file to an original",
    homepage = "https://www.gnu.org/software/patch/",
    license = "GPL-3+",

    # USE flags this package supports
    iuse = [
        "xattr",
    ],

    # Default USE flags
    use_defaults = [],

    # Conditional configure arguments
    use_configure = {
        "xattr": "--enable-xattr",
        "-xattr": "--disable-xattr",
    },

    visibility = ["PUBLIC"],
)
