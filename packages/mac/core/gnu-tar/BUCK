load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")
load("//defs:platform_defs.bzl", "PLATFORM_MACOS")

autotools_package(
    name = "gnu-tar",
    version = "1.35",
    src_uri = "https://mirrors.kernel.org/gnu/tar/tar-1.35.tar.xz",
    sha256 = "4d62ff37c1ab97f8a3a5d40e50dd5de0408399c4a13f88cf0b40b0fd1c0c1c24",
    description = "GNU tar archiving utility (macOS)",
    homepage = "https://www.gnu.org/software/tar/",
    license = "GPL-3.0",

    # USE flags this package supports
    iuse = [
        "nls",
        "acl",
        "xattr",
    ],

    # Default USE flags
    use_defaults = ["nls", "xattr"],

    # Conditional configure arguments
    use_configure = {
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
        "acl": "--with-posix-acls",
        "-acl": "--without-posix-acls",
        "xattr": "--with-xattrs",
        "-xattr": "--without-xattrs",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--program-prefix=g",
    ],

    maintainers = ["mac-team"],
    visibility = ["PUBLIC"],
)
