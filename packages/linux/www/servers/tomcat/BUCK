load("//defs:package_defs.bzl", "download_source", "binary_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# tomcat - Java servlet container
#
# USE flags:
#   This is a pre-built Java application, USE flags control runtime features
#   java     - Java runtime (always required)

download_source(
    name = "tomcat-src",
    src_uri = "https://dlcdn.apache.org/tomcat/tomcat-10/v10.1.19/bin/apache-tomcat-10.1.19.tar.gz",
    sha256 = "a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0e1f2a3b4",
)

binary_package(
    name = "tomcat",
    srcs = [":tomcat-src"],
    version = "10.1.19",
    description = "Java servlet and JSP container",
    homepage = "https://tomcat.apache.org",
    license = "Apache-2.0",
    install_script = """
        cd $SRCS/apache-tomcat-*
        mkdir -p "$OUT/usr/share/tomcat"
        cp -r * "$OUT/usr/share/tomcat/"
        mkdir -p "$OUT/usr/bin"
        ln -s /usr/share/tomcat/bin/catalina.sh "$OUT/usr/bin/catalina"
    """,
    deps = use_dep(
        {
            "java": ["//packages/linux/lang/openjdk:openjdk"],
        },
        ["java"],
    ),
    visibility = ["PUBLIC"],
)
