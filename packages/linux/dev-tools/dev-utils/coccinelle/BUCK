load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# coccinelle - Semantic patching tool for C
download_source(
    name = "coccinelle-src",
    src_uri = "https://coccinelle.gitlabpages.inria.fr/website/distrib/coccinelle-1.1.1.tar.gz",
    sha256 = "cea75b0a503a77e1c60a39c02d8849c285aed5d983b1e96c6e7c90b735982d32",
)

configure_make_package(
    name = "coccinelle",
    source = ":coccinelle-src",
    version = "1.1.1",
    description = "Semantic patching tool for C programs",
    homepage = "https://coccinelle.lip6.fr",
    license = "GPL-2",
    configure_args = [
        "--prefix=/usr",
        "--disable-python",
    ],
    deps = [
        "//packages/linux/lang/ocaml:ocaml",
    ],
    visibility = ["PUBLIC"],
)
