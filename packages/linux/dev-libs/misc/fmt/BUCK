load("//defs:package_defs.bzl", "download_source", "cmake_package")

download_source(
    name = "fmt-src",
    src_uri = "https://github.com/fmtlib/fmt/archive/refs/tags/10.2.1.tar.gz",
    sha256 = "1250e4cc58bf06ee631567523f48848dc4596133e163f02615c97f78bab6c811",
)

cmake_package(
    name = "fmt",
    source = ":fmt-src",
    version = "10.2.1",
    description = "Modern formatting library for C++",
    homepage = "https://fmt.dev/",
    license = "MIT",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DFMT_TEST=OFF",
        "-DFMT_DOC=OFF",
    ],
    visibility = ["PUBLIC"],
)
