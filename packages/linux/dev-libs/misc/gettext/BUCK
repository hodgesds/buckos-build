load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# gettext - GNU internationalization utilities
download_source(
    name = "gettext-src",
    src_uri = "https://ftp.gnu.org/gnu/gettext/gettext-0.26.tar.xz",
    sha256 = "d1fb86e260cfe7da6031f94d2e44c0da55903dbae0a2fa0fae78c91ae1b56f00",
)

configure_make_package(
    name = "gettext",
    source = ":gettext-src",
    version = "0.26",
    description = "GNU internationalization and localization utilities",
    homepage = "https://www.gnu.org/software/gettext",
    license = "GPL-3+",
    configure_args = [
        "--disable-java",
        "--disable-csharp",
        "--disable-openmp",
        "--without-emacs",
    ],
    deps = [
        "//packages/linux/core/ncurses:ncurses",
    ],
    visibility = ["PUBLIC"],
)
