load("//defs:package_defs.bzl", "download_source", "binary_package")

download_source(
    name = "himalaya-src",
    src_uri = "https://github.com/pimalaya/himalaya/archive/v1.0.0.tar.gz",
    sha256 = "a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2",
)

binary_package(
    name = "himalaya",
    srcs = [":himalaya-src"],
    version = "1.0.0",
    description = "CLI to manage emails written in Rust",
    homepage = "https://pimalaya.org/himalaya/",
    license = "MIT",
    install_script = """
        cd $SRCS/himalaya-*
        export CARGO_HOME="$PWD/.cargo"
        cargo build --release --locked
        install -Dm755 target/release/himalaya "$OUT/usr/bin/himalaya"

        # Install shell completions
        mkdir -p "$OUT/usr/share/bash-completion/completions"
        mkdir -p "$OUT/usr/share/zsh/site-functions"
        mkdir -p "$OUT/usr/share/fish/vendor_completions.d"
        ./target/release/himalaya completion bash > "$OUT/usr/share/bash-completion/completions/himalaya"
        ./target/release/himalaya completion zsh > "$OUT/usr/share/zsh/site-functions/_himalaya"
        ./target/release/himalaya completion fish > "$OUT/usr/share/fish/vendor_completions.d/himalaya.fish"
    """,
    deps = [
        "//packages/lang/rust:rust",
        "//packages/core:musl",
        "//packages/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
