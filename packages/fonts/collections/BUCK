# Font collections and families

filegroup(
    name = "libre-fonts",
    srcs = [
        "//packages/fonts/collections/liberation-fonts:liberation-fonts",
        "//packages/fonts/collections/dejavu-fonts:dejavu-fonts",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "google-fonts",
    srcs = [
        "//packages/fonts/collections/noto-fonts:noto-fonts",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "adobe-fonts",
    srcs = [
        "//packages/fonts/collections/source-fonts:source-sans",
        "//packages/fonts/collections/source-fonts:source-serif",
        "//packages/fonts/collections/source-fonts:source-code-pro",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "essential-fonts",
    srcs = [
        "//packages/fonts/collections/liberation-fonts:liberation-fonts",
        "//packages/fonts/collections/dejavu-fonts:dejavu-fonts",
        "//packages/fonts/collections/source-fonts:source-code-pro",
    ],
    visibility = ["PUBLIC"],
)

filegroup(
    name = "all-collections",
    srcs = [
        ":libre-fonts",
