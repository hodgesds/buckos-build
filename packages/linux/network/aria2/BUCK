load("//defs:package_defs.bzl", "download_source", "autotools_package", "binary_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# =============================================================================
# aria2 - Lightweight multi-protocol download utility
# =============================================================================

autotools_package(
    name = "aria2",
    version = "1.37.0",
    src_uri = "https://github.com/aria2/aria2/releases/download/release-1.37.0/aria2-1.37.0.tar.xz",
    sha256 = "60a420ad7085eb616cb6e2bdf0a7206d68ff3d37fb5a956dc44242eb2f79b66b",
    signature_required = False,

    iuse = ["ssl", "gnutls", "bittorrent", "metalink", "nls", "xml"],
    use_defaults = ["ssl", "bittorrent", "metalink"],

    use_deps = {
        "ssl": ["//packages/linux/network/openssl:openssl"],
        "gnutls": ["//packages/linux/system/libs/crypto/gnutls:gnutls"],
        "xml": ["//packages/linux/system/libs/data/libxml2:libxml2"],
    },

    use_configure = {
        "ssl": "--with-openssl",
        "-ssl": "--without-openssl",
        "gnutls": "--with-gnutls",
        "-gnutls": "--without-gnutls",
        "bittorrent": "--enable-bittorrent",
        "-bittorrent": "--disable-bittorrent",
        "metalink": "--enable-metalink",
        "-metalink": "--disable-metalink",
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
        "xml": "--with-libxml2",
        "-xml": "--without-libxml2",
    },

    configure_args = [
        "--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt",
    ],

    deps = [
        "//packages/linux/network/ca-certificates:ca-certificates",
        "//packages/linux/core/zlib:zlib",
    ],

    description = "Lightweight multi-protocol multi-source download utility",
    homepage = "https://aria2.github.io/",
    license = "GPL-2.0",
    visibility = ["PUBLIC"],
)
