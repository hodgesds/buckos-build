load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

cmake_package(
    name = "mimalloc",
    version = "2.1.2",
    src_uri = "https://github.com/microsoft/mimalloc/archive/refs/tags/v2.1.2.tar.gz",
    sha256 = "2b1bff6f717f9725c70bf8d79e4786da13de8a270059e4ba0bdd262ae7be46eb",
