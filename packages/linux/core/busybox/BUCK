load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# Download source - explicitly created with PUBLIC visibility for reuse
download_source(
    name = "busybox-src",
    src_uri = "https://busybox.net/downloads/busybox-1.36.1.tar.bz2",
    sha256 = "b8cc24c9574d809e7279c3be349795c5d5ceb6fdf19ca709f80cde50e47de314",
    auto_detect_signature=False,
    visibility = ["PUBLIC"],
)

autotools_package(
    name = "busybox",
    source = ":busybox-src",
    version = "1.36.1",
    description = "BusyBox combines tiny versions of many common UNIX utilities into a single small executable",
    homepage = "https://busybox.net/",
    license = "GPL-2.0",
    pre_configure = """
# Start with minimal config, then enable only what we need
make allnoconfig

# Enable cpio (needed for dracut)
sed -i 's/# CONFIG_CPIO is not set/CONFIG_CPIO=y/' .config

# Enable features cpio needs
sed -i 's/# CONFIG_FEATURE_CPIO_O is not set/CONFIG_FEATURE_CPIO_O=y/' .config
sed -i 's/# CONFIG_FEATURE_CPIO_P is not set/CONFIG_FEATURE_CPIO_P=y/' .config

# Enable static linking
sed -i 's/# CONFIG_STATIC is not set/CONFIG_STATIC=y/' .config

# Ensure we have the install applet to create busybox symlink
sed -i 's/# CONFIG_INSTALL is not set/CONFIG_INSTALL=y/' .config
""",
    make_args = [
        "CONFIG_PREFIX=$DESTDIR",
    ],
    post_install = """
# Only create cpio symlink - don't conflict with coreutils
mkdir -p "$DESTDIR/usr/bin"
# Remove any auto-created symlinks that might conflict
find "$DESTDIR" -type l -name "*" ! -name "cpio" -delete 2>/dev/null || true
# Ensure cpio symlink exists
if [ -f "$DESTDIR/bin/busybox" ]; then
    ln -sf /bin/busybox "$DESTDIR/usr/bin/cpio"
elif [ -f "$DESTDIR/usr/bin/busybox" ]; then
    ln -sf busybox "$DESTDIR/usr/bin/cpio"
fi
""",
    visibility = ["PUBLIC"],
)
