load("//defs:package_defs.bzl", "download_source", "binary_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "stalwart-src",
    src_uri = "https://github.com/stalwartlabs/mail-server/archive/v0.8.5.tar.gz",
    sha256 = "a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2",
)

binary_package(
    name = "stalwart",
    srcs = [":stalwart-src"],
    version = "0.8.5",
    description = "All-in-one mail server with JMAP, IMAP4, POP3, and SMTP",
    homepage = "https://stalw.art/",
    license = "AGPL-3.0",
    install_script = """
        cd $SRCS/mail-server-*

        export CARGO_HOME="$PWD/.cargo"
        export RUSTFLAGS="-C target-feature=-crt-static"

        cargo build --release --locked

        # Install binaries
        install -Dm755 target/release/stalwart-mail "$OUT/usr/bin/stalwart-mail"
        install -Dm755 target/release/stalwart-cli "$OUT/usr/bin/stalwart-cli"

        # Create directories
        mkdir -p "$OUT/etc/stalwart"
        mkdir -p "$OUT/var/lib/stalwart"
        mkdir -p "$OUT/var/log/stalwart"

        # Install default config
        install -Dm644 resources/config/config.toml "$OUT/etc/stalwart/config.toml"

        # Install systemd service
        mkdir -p "$OUT/usr/lib/systemd/system"
        cat > "$OUT/usr/lib/systemd/system/stalwart-mail.service" << 'SERVICE'
[Unit]
Description=Stalwart Mail Server
After=network.target

[Service]
Type=simple
User=stalwart
Group=stalwart
ExecStart=/usr/bin/stalwart-mail --config /etc/stalwart/config.toml
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
SERVICE
    """,
    deps = [
        "//packages/linux/lang/rust:rust",
        "//packages/linux/core:musl",
        "//packages/linux/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
