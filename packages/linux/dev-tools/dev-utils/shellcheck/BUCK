load("//defs:package_defs.bzl", "download_source", "precompiled_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "shellcheck-src",
    src_uri = "https://github.com/koalaman/shellcheck/releases/download/v0.10.0/shellcheck-v0.10.0.linux.x86_64.tar.xz",
    sha256 = "6c881ab0698e4e6ea235245f22832860544f17ba386442fe7e9d629f8cbedf87",
)

precompiled_package(
    name = "shellcheck",
    source = ":shellcheck-src",
    version = "0.10.0",
    description = "Shell script static analysis tool",
    homepage = "https://www.shellcheck.net/",
    license = "GPL-3",
    install_script = """
        mkdir -p "$PREFIX/bin"
        cp shellcheck-v0.10.0/shellcheck "$PREFIX/bin/"
        chmod +x "$PREFIX/bin/shellcheck"
    """,
    visibility = ["PUBLIC"],
)
