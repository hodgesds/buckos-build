load("//defs:package_defs.bzl", "download_source", "configure_make_package")

# geany - Lightweight IDE and text editor
download_source(
    name = "geany-src",
    src_uri = "https://download.geany.org/geany-2.0.tar.bz2",
    sha256 = "c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0",
)

configure_make_package(
    name = "geany",
    source = ":geany-src",
    version = "2.0",
    description = "Lightweight IDE and text editor using GTK",
    homepage = "https://www.geany.org",
    license = "GPL-2+",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
    ],
    deps = [
        "//packages/linux/core:musl",
        "//packages/linux/desktop/gtk:gtk3",
    ],
    visibility = ["PUBLIC"],
)
