load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "ltrace-src",
    src_uri = "https://www.ltrace.org/ltrace-0.7.3.tar.bz2",
    sha256 = "0e6f8c077471b544c06def7192d983861ad2f8688dd5504beae62f0c5f5b9503",
)

configure_make_package(
    name = "ltrace",
    source = ":ltrace-src",
    version = "0.7.3",
    description = "Library call tracer",
    homepage = "https://www.ltrace.org/",
    license = "GPL-2+",
    configure_args = [
        "--disable-werror",
    ],
    visibility = ["PUBLIC"],
)
