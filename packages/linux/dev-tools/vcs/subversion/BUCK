load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "subversion",
    version = "1.14.3",
    src_uri = "https://archive.apache.org/dist/subversion/subversion-1.14.3.tar.bz2",
    sha256 = "e57cc39802bfcb2f9f7fe405a24157ca713ac747b87a7feecb34381adc113902",
    description = "Enterprise-class centralized version control for the masses",
    homepage = "https://subversion.apache.org/",
    license = "Apache-2.0",

    # USE flags this package supports
    iuse = [
        "perl",
        "python",
        "ruby",
        "sqlite",
        "static-libs",
    ],

    # Default USE flags
    use_defaults = ["sqlite"],

    # Conditional dependencies
    use_deps = {
        "perl": ["//packages/linux/lang/perl:perl"],
        "python": ["//packages/linux/lang/python:python"],
        "ruby": ["//packages/linux/lang/ruby:ruby"],
    },

    # Conditional configure arguments
    use_configure = {
        "perl": "--with-swig=/usr/bin/swig",
        "-perl": "--without-swig",
        "python": "--enable-python-bindings",
        "-python": "--disable-python-bindings",
        "ruby": "--enable-ruby-bindings",
        "-ruby": "--disable-ruby-bindings",
        "static-libs": "--enable-static",
        "-static-libs": "--disable-static",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--with-apr=/usr",
        "--with-apr-util=/usr",
        "--with-serf=/usr",
        "--with-zlib=/usr",
        "--with-sqlite=/usr",
    ],

    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
