load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# coccinelle - Semantic patching tool for C
download_source(
    name = "coccinelle-src",
    src_uri = "https://gitlab.inria.fr/coccinelle/coccinelle/-/archive/1.3.0/coccinelle-1.3.0.tar.bz2",
    sha256 = "32e541430916ab6556e4f771439f64395b051d50ba346165833a5216e327d63b",
)

configure_make_package(
    name = "coccinelle",
    source = ":coccinelle-src",
    version = "1.1.1",
    description = "Semantic patching tool for C programs",
    homepage = "https://coccinelle.lip6.fr",
    license = "GPL-2",
    configure_args = [
        "--prefix=/usr",
        "--disable-python",
    ],
    deps = [
        "//packages/linux/lang/ocaml:ocaml",
    ],
    visibility = ["PUBLIC"],
)
