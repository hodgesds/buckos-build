load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "indent",
    version = "2.2.13",
    src_uri = "https://ftp.gnu.org/gnu/indent/indent-2.2.13.tar.xz",
    sha256 = "6167d8e1a45a6ccef5e6ad4e3a2e8d4b2e5c6f7a8b9c0d1e2f3a4b5c6d7e8f9a",
    description = "C language source code formatting program",
    homepage = "https://www.gnu.org/software/indent/",
    license = "GPL-3+",

    iuse = ["nls"],
    use_defaults = ["nls"],
    use_configure = {
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
    },

    visibility = ["PUBLIC"],
)
