load("//defs:package_defs.bzl", "meson_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# systemd-utils - Standalone systemd utilities
# USE flags: (meson build system with many options)

meson_package(
    name = "systemd-utils",
    version = "255",
    src_uri = "https://github.com/systemd/systemd/archive/refs/tags/v255.tar.gz",
    sha256 = "PLACEHOLDER_SHA256",
    description = "Standalone systemd utilities (udevd, tmpfiles, etc.)",
    homepage = "https://systemd.io",
    license = "LGPL-2.1+",
    meson_args = [
        "-Dprefix=/usr",
        "-Dsysconfdir=/etc",
        "-Dlocalstatedir=/var",
        "-Dmode=release",
        "-Dstatic-libsystemd=false",
        "-Dstandalone-binaries=true",
        "-Dsplit-usr=false",
        "-Dsplit-bin=true",
        "-Drootprefix=/usr",
        "-Drootlibdir=/usr/lib",
        "-Dsysvinit-path=/etc/init.d",
        "-Dsysvrcnd-path=/etc",
        "-Dlink-udev-shared=false",
        "-Dlink-systemctl-shared=false",
    ],
    deps = [
        "//packages/linux/system/libs/utility/libcap:libcap",
        "//packages/linux/system/libs/ipc/libseccomp:libseccomp",
    ],
    visibility = ["PUBLIC"],
)
