load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "git",
    version = "2.43.0",
    src_uri = "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.43.0.tar.xz",
    sha256 = "43e42ad8a9b59d9e3dc628100f0eed09fb7e80a33cf52f82dfe8a58eac515b54",
    description = "Fast, scalable, distributed revision control system",
    homepage = "https://git-scm.com/",
    license = "GPL-2",

    # USE flags this package supports
    iuse = [
        "curl",
        "perl",
        "python",
        "pcre2",
        "nls",
    ],

    # Default USE flags
    use_defaults = ["curl", "perl", "python", "pcre2"],

    # Conditional dependencies
    use_deps = {
        "curl": ["//packages/linux/network/curl:curl"],
        "perl": ["//packages/linux/lang/perl:perl"],
        "python": ["//packages/linux/lang/python:python"],
        "pcre2": ["//packages/linux/system/libs/utility/pcre2:pcre2"],
        "nls": ["//packages/linux/dev-libs/misc/gettext:gettext"],
    },

    # Conditional configure arguments
    use_configure = {
        "curl": "--with-curl",
        "-curl": "--without-curl",
        "perl": "--with-perl=/usr/bin/perl",
        "-perl": "--without-perl",
        "python": "--with-python=/usr/bin/python3",
        "-python": "--without-python",
        "pcre2": "--with-libpcre2",
        "-pcre2": "--without-libpcre2",
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--with-expat",
        "--with-openssl",
        "--with-zlib",
    ],

    make_args = [
        "prefix=/usr",
        "gitexecdir=/usr/libexec/git-core",
        "NO_CROSS_DIRECTORY_HARDLINKS=1",
        "NO_INSTALL_HARDLINKS=1",
    ],
    install_target = "install",
    deps = [
        "//packages/linux/core/zlib:zlib",
        "//packages/linux/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
