load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# Cloud Hypervisor - Modern cloud workload VMM
download_source(
    name = "cloud-hypervisor-src",
    src_uri = "https://github.com/cloud-hypervisor/cloud-hypervisor/archive/refs/tags/v41.0.tar.gz",
    sha256 = "6b25fea566f8deba48000292423bb6fab32c0bed7f6a37e6456e9a1fab0c0c00",
)

# USE flags: See use_flags.bzl for available flags

autotools_package(
    name = "cloud-hypervisor",
    source = ":cloud-hypervisor-src",
    version = "41.0",
    description = "Modern cloud workload-focused virtual machine monitor",
    homepage = "https://www.cloudhypervisor.org/",
    license = "Apache-2.0 AND BSD-3-Clause",
    env = {
        "CARGO_HOME": "/tmp/cargo",
    },
    pre_configure = """
cargo build --release --all
    """,
    post_install = """
#!/bin/bash
set -e

mkdir -p "$DESTDIR/usr/bin"
install -m 0755 target/release/cloud-hypervisor "$DESTDIR/usr/bin/"
install -m 0755 target/release/ch-remote "$DESTDIR/usr/bin/"

# Install systemd unit template
mkdir -p "$DESTDIR/usr/lib/systemd/system"
cat > "$DESTDIR/usr/lib/systemd/system/cloud-hypervisor@.service" << 'EOF'
[Unit]
Description=Cloud Hypervisor VM %i
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/cloud-hypervisor --api-socket /run/cloud-hypervisor/%i.sock
RuntimeDirectory=cloud-hypervisor
Restart=on-failure

[Install]
WantedBy=multi-user.target
EOF

# Create default configuration directory
mkdir -p "$DESTDIR/etc/cloud-hypervisor"
mkdir -p "$DESTDIR/var/lib/cloud-hypervisor"
    """,
    deps = [
        "//packages/linux/lang/rust:rust",
    ],
    visibility = ["PUBLIC"],
)
