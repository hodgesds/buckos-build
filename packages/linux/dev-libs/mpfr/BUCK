load("//defs:package_defs.bzl", "download_source", "ebuild_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# mpfr - Multiple Precision Floating-Point Reliable Library
download_source(
    name = "mpfr-src",
    src_uri = "https://www.mpfr.org/mpfr-current/mpfr-4.2.1.tar.xz",
    sha256 = "e582e8bfc4e229b288c151c7e96e6d26e6b3fe7fb4af586bb45de3fe107fbc57",
)

ebuild_package(
    name = "mpfr",
    source = ":mpfr-src",
    version = "4.2.1",
    description = "Multiple-precision floating-point computations library",
    homepage = "https://www.mpfr.org/",
    license = "LGPL-3.0-or-later",
    src_configure = """
./configure --prefix=/usr --enable-shared
""",
    src_compile = """
make
""",
    src_install = """
make install DESTDIR="$DESTDIR"
""",
    rdepend = [
        "//packages/linux/dev-libs/gmp:gmp",
    ],
    visibility = ["PUBLIC"],
)
