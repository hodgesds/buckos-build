load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# lzip - Lossless data compressor based on LZMA algorithm
autotools_package(
    name = "lzip",
    version = "1.24",
    src_uri = "https://download.savannah.gnu.org/releases/lzip/lzip-1.24.tar.gz",
    sha256 = "d42659229b10e066eeb6e81eb673cdd893b672e512d26719c2d95975556ca56c",
    auto_detect_signature = False,
    description = "Lossless data compressor based on LZMA algorithm",
    homepage = "https://www.nongnu.org/lzip/",
    license = "GPL-2.0-or-later",
    iuse = [],
    use_defaults = [],
    use_configure = {},
    use_deps = {},
    configure_args = [
        "--prefix=/usr",
        "CC=gcc",
        "CXX=g++",
    ],
    pre_configure = """
# lzip is a command-line utility (no library), so no static-libs flag needed
# Uses configure script (not autotools) build system
""",
    deps = [],
    visibility = ["PUBLIC"],
)
