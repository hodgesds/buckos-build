load("//defs:package_defs.bzl", "download_source", "autotools_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "aide-src",
    src_uri = "https://github.com/aide/aide/releases/download/v0.18.6/aide-0.18.6.tar.gz",
    sha256 = "8ff36ce47d37d0cc987762d5d961346d475de74bba8a1832fd006db6edd3c10e",
    auto_detect_signature=False,
)

autotools_package(
    name = "aide",
    source = ":aide-src",
    version = "0.18.6",
    description = "Advanced Intrusion Detection Environment - file integrity checker",
    homepage = "https://aide.github.io/",
    license = "GPL-2.0+",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--with-mhash",
        "--with-posix-acl",
        "--with-selinux",
        "--with-xattr",
        "--with-e2fsattrs",
        "--with-zlib",
    ],
    deps = [
        "//packages/linux/core/zlib:zlib",
    ],
    visibility = ["PUBLIC"],
)
