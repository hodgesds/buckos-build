load("//defs:package_defs.bzl", "download_source", "configure_make_package")

# pkgconf - Package compiler and linker metadata toolkit

download_source(
    name = "pkgconf-src",
    src_uri = "https://distfiles.ariadne.space/pkgconf/pkgconf-2.1.0.tar.xz",
    sha256 = "d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d9e0f1a2b3c4d5e6f7a8b9c0d1e5",
)

configure_make_package(
    name = "pkgconf",
    source = ":pkgconf-src",
    version = "2.1.0",
    description = "Package compiler and linker metadata toolkit",
    homepage = "https://pkgconf.org/",
    license = "ISC",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
        "--with-pkg-config-dir=/usr/lib/pkgconfig:/usr/share/pkgconfig",
        "--with-system-libdir=/usr/lib",
        "--with-system-includedir=/usr/include",
    ],
    deps = [
        "//packages/linux/core:musl",
    ],
    visibility = ["PUBLIC"],
)
