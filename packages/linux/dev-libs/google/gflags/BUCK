load("//defs:package_defs.bzl", "download_source", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "gflags-src",
    src_uri = "https://github.com/gflags/gflags/archive/refs/tags/v2.2.2.tar.gz",
    sha256 = "34af2f15cf7367513b352bdcd2493ab14ce43692d2dcd9dfc499492966c64dcf",
)

cmake_package(
    name = "gflags",
    srcs = [":gflags-src"],
    version = "2.2.2",
    description = "C++ library for commandline flags processing",
    homepage = "https://gflags.github.io/gflags/",
    license = "BSD-3-Clause",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DBUILD_STATIC_LIBS=OFF",
        "-DBUILD_TESTING=OFF",
    ],
    visibility = ["PUBLIC"],
)
