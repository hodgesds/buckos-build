load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "libmicrohttpd-src",
    src_uri = "https://ftp.gnu.org/gnu/libmicrohttpd/libmicrohttpd-1.0.1.tar.gz",
    sha256 = "a89e09fc9b4de34dde19f4fcb4faaa1ce10299b9908db1449f3b8f2f1b5f5f2e",
)

configure_make_package(
    name = "libmicrohttpd",
    source = ":libmicrohttpd-src",
    version = "1.0.1",
    description = "Small C library for embedding HTTP server functionality",
    homepage = "https://www.gnu.org/software/libmicrohttpd/",
    license = "LGPL-2.1+",
    configure_args = [
        "--disable-static",
        "--enable-https",
    ],
    deps = [
        "//packages/system/libs/crypto/gnutls",
    ],
    visibility = ["PUBLIC"],
)
