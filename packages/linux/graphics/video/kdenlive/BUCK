load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

download_source(
    name = "kdenlive-src",
    src_uri = "https://download.kde.org/stable/kdenlive/24.02/kdenlive-24.02.0.tar.xz",
    sha256 = "e0efff427b2155b09784851fa1645511ffb93629e557e887ec5dacff2fe223a0",
)

autotools_package(
    name = "kdenlive",
    source = ":kdenlive-src",
    version = "24.02.0",
    description = "KDE non-linear video editor",
    homepage = "https://kdenlive.org/",
    license = "GPL-3.0-or-later",
    pre_configure = """
mkdir -p build
cd build
cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_TESTING=OFF \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DRELEASE_BUILD=ON
""",
    configure_args = [],
    make_args = ["-C", "build"],
    post_install = """
cd build
DESTDIR=$OUT make install
""",
    deps = [
        "//packages/linux/desktop/kde:kf5",
        "//packages/linux/desktop/qt:qt5",
        "//packages/linux/dev-libs/mlt:mlt",
        "//packages/linux/graphics/video/ffmpeg:ffmpeg",
        "//packages/linux/core/frei0r:frei0r",
        "//packages/linux/graphics/video/v4l-utils:libv4l",
        "//packages/linux/core/rttr:rttr",
    ],
    build_deps = [],
    visibility = ["PUBLIC"],
)
