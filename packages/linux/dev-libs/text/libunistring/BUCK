load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

download_source(
    name = "libunistring-src",
    src_uri = "https://mirrors.kernel.org/gnu/libunistring/libunistring-1.2.tar.xz",
    sha256 = "89a7e7fb1461c9f5900d1e2e970a9ffbfae8d70e65da39b9378d1aafa4481aff",
    auto_detect_signature = False,
)

autotools_package(
    name = "libunistring",
    source = ":libunistring-src",
    version = "1.2",
    description = "Library for manipulating Unicode strings",
    homepage = "https://www.gnu.org/software/libunistring/",
    license = "LGPL-3.0+",
    configure_args = [
        "--disable-static",
    ],
    visibility = ["PUBLIC"],
)
