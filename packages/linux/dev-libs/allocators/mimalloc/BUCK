    homepage = "https://github.com/microsoft/mimalloc",
    license = "MIT",
    cmake_args = [
        "-DMI_BUILD_STATIC=OFF",
        "-DMI_BUILD_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
)
