load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# tmux - Terminal multiplexer
# USE flags: utf8proc, systemd, static-libs

use_package(
    name = "tmux",
    version = "3.4",
    src_uri = "https://github.com/tmux/tmux/releases/download/3.4/tmux-3.4.tar.gz",
    sha256 = "551553a4f82beaa8dadc9256800bcc284d7c000081e47aa6ecbb6ff36eacd05f",
    description = "Terminal multiplexer with client-server model",
    homepage = "https://tmux.github.io",
    license = "ISC",
    iuse = ["utf8proc", "systemd", "static-libs", "debug"],
    use_defaults = [],
    use_deps = {
        "systemd": ["//packages/linux/system/init/systemd:systemd"],
    },
    use_configure = {
        "utf8proc": "--enable-utf8proc",
        "-utf8proc": "--disable-utf8proc",
        "systemd": "--enable-systemd",
        "-systemd": "--disable-systemd",
        "static-libs": "--enable-static",
        "-static-libs": "--disable-static",
        "debug": "--enable-debug",
        "-debug": "--disable-debug",
    },
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
    ],
    deps = [
        "//packages/linux/core/ncurses:ncurses",
        "//packages/linux/core:libevent",
    ],
    visibility = ["PUBLIC"],
)
