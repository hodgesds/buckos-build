load("//defs:package_defs.bzl", "download_source", "cmake_package")

# Avidemux - Free video editor designed for simple cutting, filtering and encoding tasks

download_source(
    name = "avidemux-src",
    src_uri = "https://github.com/mean00/avidemux2/releases/download/2.8.1/avidemux_2.8.1.tar.gz",
    sha256 = "a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2",
)

cmake_package(
    name = "avidemux",
    source = ":avidemux-src",
    version = "2.8.1",
    description = "Free video editor for simple cutting, filtering and encoding",
    homepage = "http://avidemux.sourceforge.net/",
    license = "GPL-2.0-or-later",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DFAKEROOT=$OUT",
        "-DAVIDEMUX_SOURCE_DIR=.",
        "-DAVIDEMUX_CORECONFIG_DIR=.",
        "-DPLUGIN_UI=QT4",
        "-DQT4=ON",
    ],
    deps = [
        "//packages/graphics/video/ffmpeg:ffmpeg",
        "//packages/graphics/video/x264:x264",
        "//packages/graphics/video/x265:x265",
        "//packages/graphics/video/libvpx:libvpx",
        "//packages/audio/libraries/opus:opus",
        "//packages/audio/libraries/lame:lame",
        "//packages/desktop/qt:qt5",
        "//packages/core/sqlite:sqlite",
    ],
    build_deps = [
        "//packages/core/pkg-config:pkg-config",
        "//packages/lang/nasm:nasm",
    ],
    visibility = ["PUBLIC"],
)
