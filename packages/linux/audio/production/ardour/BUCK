load("//defs:package_defs.bzl", "download_source", "binary_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# USE flags for ardour (waf build system):
# - alsa: ALSA backend (default: enabled)
# - jack: JACK backend (default: enabled)
# - pulseaudio: PulseAudio backend (default: disabled)
# - lv2: LV2 plugin support (default: disabled)
# - vst: VST plugin support (default: disabled)
# - nls: Native language support (default: disabled)

download_source(
    name = "ardour-src",
    src_uri = "https://github.com/Ardour/ardour/archive/refs/tags/8.6.tar.gz",
    sha256 = "84d79d73d749cf05a223feb74d5fdfcacfef520e185169752e33fb9bfcbce7b3",
)

# Ardour uses waf build system
binary_package(
    name = "ardour",
    srcs = [":ardour-src"],
    version = "8.6.0",
    description = "Professional-grade digital audio workstation",
    homepage = "https://ardour.org/",
    license = "GPL-2",
    install_script = """
        cd $SRCS

        # Configure with waf
        python3 ./waf configure \
            --prefix=/usr \
            --configdir=/etc \
            --with-backend=alsa \
            --no-phone-home \
            --optimize \
            --freedesktop \
            --no-nls \
            --with-lv2=no \
            --with-vst=no \
            --with-audiounits=no

        # Build
        python3 ./waf build

        # Install
        python3 ./waf install --destdir=$OUT
    """,
    deps = [
        "//packages/linux/audio/daemons/alsa-lib:alsa-lib",
        "//packages/linux/audio/daemons/jack2:jack2",
        "//packages/linux/audio/libraries/libsndfile:libsndfile",
        "//packages/linux/audio/libraries/flac:flac",
        "//packages/linux/audio/libraries/libvorbis:libvorbis",
        "//packages/linux/audio/libraries/libogg:libogg",
        "//packages/linux/desktop/gnome:gtk3",
        "//packages/linux/lang/python:python",
    ],
    visibility = ["PUBLIC"],
)
