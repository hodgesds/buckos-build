# ccache - Compiler cache (cmake build)
# USE flags: redis, doc, test
# Default: none

cmake_package(
    name = "ccache",
    version = "4.9.1",
    src_uri = "https://github.com/ccache/ccache/releases/download/v4.9.1/ccache-4.9.1.tar.xz",
    sha256 = "82ad632d31ee05da13b537c124f819eb88e18851d9cb0c30ae0552084811588c",
    description = "Fast C/C++ compiler cache",
    homepage = "https://ccache.dev/",
    license = "GPL-3+",
    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DENABLE_TESTING=OFF",
    ],
    visibility = ["PUBLIC"],
)
