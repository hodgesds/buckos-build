load("//defs:package_defs.bzl", "download_source", "configure_make_package")

# kcov - Code coverage tool
download_source(
    name = "kcov-src",
    src_uri = "https://github.com/SimonKagworgs/kcov/archive/refs/tags/v42.tar.gz",
    sha256 = "f6a8b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7",
)

configure_make_package(
    name = "kcov",
    source = ":kcov-src",
    version = "42",
    description = "Code coverage tool for compiled programs",
    homepage = "https://github.com/SimonKagstrom/kcov",
    license = "GPL-2",
    build_system = "cmake",
    configure_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
    ],
    deps = [
        "//packages/linux/core:musl",
        "//packages/linux/system/libs/utility/elfutils:elfutils",
        "//packages/linux/network/curl:curl",
    ],
    visibility = ["PUBLIC"],
)
