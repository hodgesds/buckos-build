load("//defs:package_defs.bzl", "download_source", "ebuild_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# glew - OpenGL Extension Wrangler Library
download_source(
    name = "glew-src",
    src_uri = "https://github.com/nigels-com/glew/releases/download/glew-2.2.0/glew-2.2.0.tgz",
    sha256 = "d4fc82893cfb00109578d0a1a2337fb8ca335b3ceccf97b97e5cc7f08e4353e1",
    signature_required = False,
)

ebuild_package(
    name = "glew",
    source = ":glew-src",
    version = "2.2.0",
    description = "OpenGL Extension Wrangler Library",
    homepage = "http://glew.sourceforge.net/",
    license = "BSD-3-Clause",
    src_compile = """
make -j$(nproc) GLEW_DEST=/usr
""",
    src_install = """
make install GLEW_DEST=/usr DESTDIR="$DESTDIR"
""",
    visibility = ["PUBLIC"],
)
