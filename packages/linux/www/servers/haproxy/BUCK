load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# haproxy - High-performance TCP/HTTP load balancer
#
# USE flags:
#   ssl       - Enable SSL/TLS support with OpenSSL
#   zlib      - Enable zlib compression
#   pcre2     - Enable PCRE2 regular expressions
#   prometheus - Enable Prometheus metrics exporter
#   threads   - Enable multi-threading support
#   systemd   - Enable systemd integration

use_package(
    name = "haproxy",
    version = "3.0.5",
    src_uri = "https://www.haproxy.org/download/3.0/src/haproxy-3.0.5.tar.gz",
    sha256 = "c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2",
    description = "High-performance TCP/HTTP load balancer and proxy server",
    homepage = "https://www.haproxy.org/",
    license = "GPL-2.0",
    iuse = ["ssl", "zlib", "pcre2", "prometheus", "threads", "systemd"],
    use_defaults = ["ssl", "zlib", "pcre2", "prometheus", "threads"],
    deps = [
        "//packages/linux/core/musl:musl",
    ],
    use_deps = {
        "ssl": ["//packages/linux/network/openssl:openssl"],
        "zlib": ["//packages/linux/core/zlib:zlib"],
        "pcre2": ["//packages/linux/core:pcre2"],
        "systemd": ["//packages/linux/system/systemd:systemd"],
    },
    pre_configure = """
# HAProxy uses make directly, not autoconf
""",
    configure_args = [],
    make_args = [
        "TARGET=linux-musl",
    ],
    use_configure = {
        "ssl": "USE_OPENSSL=1",
        "zlib": "USE_ZLIB=1",
        "pcre2": "USE_PCRE2=1",
        "prometheus": "USE_PROMEX=1",
        "threads": "USE_THREAD=1",
        "systemd": "USE_SYSTEMD=1",
    },
    install_args = [
        "PREFIX=/usr",
        "DESTDIR=$DESTDIR",
    ],
    post_install = """
mkdir -p "$DESTDIR/etc/haproxy"
mkdir -p "$DESTDIR/var/lib/haproxy"
mkdir -p "$DESTDIR/var/log/haproxy"

# Create default configuration
cat > "$DESTDIR/etc/haproxy/haproxy.cfg" << 'EOF'
global
    log /dev/log local0
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server server1 127.0.0.1:8080 check
EOF
""",
    visibility = ["PUBLIC"],
)
