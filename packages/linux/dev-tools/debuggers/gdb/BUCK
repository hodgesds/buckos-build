load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "gdb",
    version = "14.1",
    src_uri = "https://ftp.gnu.org/gnu/gdb/gdb-14.1.tar.xz",
    sha256 = "d66df51276143451fcbff464cc8723d68f1e9df45a6a2d5635a54e71643edb80",
    description = "GNU Debugger",
    homepage = "https://www.gnu.org/software/gdb/",
    license = "GPL-3+",

    # USE flags this package supports
    iuse = [
        "python",
        "readline",
        "ncurses",
        "xml",
        "nls",
    ],

    # Default USE flags
    use_defaults = ["python", "readline", "ncurses"],

    # Conditional dependencies
    use_deps = {
        "readline": ["//packages/linux/core/readline:readline"],
        "ncurses": ["//packages/linux/core/ncurses:ncurses"],
        "python": ["//packages/linux/lang/python:python"],
    },

    # Conditional configure arguments
    use_configure = {
        "readline": "--with-system-readline",
        "-readline": "--without-system-readline",
        "python": "--with-python=/usr/bin/python3",
        "-python": "--without-python",
        "ncurses": "--enable-tui --with-curses",
        "-ncurses": "--disable-tui --without-curses",
        "xml": "--with-expat",
        "-xml": "--without-expat",
        "nls": "--enable-nls",
        "-nls": "--disable-nls",
    },

    # Base configure arguments (always applied)
    configure_args = [
        "--with-system-zlib",
        "--disable-werror",
    ],

    deps = [
        "//packages/linux/core/zlib:zlib",
    ],
    visibility = ["PUBLIC"],
)
