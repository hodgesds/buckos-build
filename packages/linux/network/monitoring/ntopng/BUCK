load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# ntopng - Network traffic analysis tool

use_package(
    name = "ntopng",
    version = "6.0",
    src_uri = "https://github.com/ntop/ntopng/archive/refs/tags/6.0.tar.gz",
    sha256 = "937e3dea081f68cb8d85e0a925f5277f6a358d65ba45e90e215f0fc36d2401ac",

    iuse = ["ssl", "redis", "mysql", "geoip"],
    use_defaults = ["ssl", "redis"],

    use_deps = {
        "ssl": ["//packages/linux/network/openssl:openssl"],
        "redis": ["//packages/linux/databases/redis:redis"],
    },

    use_configure = {
        "mysql": "--with-mysql",
        "-mysql": "--without-mysql",
        "geoip": "--enable-geoip",
        "-geoip": "--disable-geoip",
    },

    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc",
    ],

    deps = [
        "//packages/linux/network/curl:curl",
    ],

    description = "High-speed web-based traffic analysis and flow collection",
    homepage = "https://www.ntop.org/products/traffic-analysis/ntop/",
    license = "GPL-3",
    visibility = ["PUBLIC"],
)
