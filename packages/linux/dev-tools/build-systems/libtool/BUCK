load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "libtool",
    version = "2.4.7",
    src_uri = "https://ftp.gnu.org/gnu/libtool/libtool-2.4.7.tar.xz",
    sha256 = "4f7f217f057f1f2d48988ffa15bfa3d2a32c87f3b0a3e7b1d0d9d0b3e4c3a7b8",
    description = "Generic library support script",
    homepage = "https://www.gnu.org/software/libtool/",
    license = "GPL-2+",

    # USE flags this package supports
    iuse = [
        "doc",
        "static-libs",
    ],

    # Default USE flags
    use_defaults = [],

    # Conditional configure arguments
    use_configure = {
        "static-libs": "--enable-static",
        "-static-libs": "--disable-static",
    },

    deps = [
        "//packages/linux/dev-tools/build-systems/autoconf:autoconf",
        "//packages/linux/dev-tools/build-systems/automake:automake",
    ],
    visibility = ["PUBLIC"],
)
