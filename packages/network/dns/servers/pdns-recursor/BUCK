load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "pdns-recursor-src",
    src_uri = "https://downloads.powerdns.com/releases/pdns-recursor-5.0.2.tar.bz2",
    sha256 = "e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0e1f2",
)

configure_make_package(
    name = "pdns-recursor",
    source = ":pdns-recursor-src",
    version = "5.0.2",
    description = "PowerDNS recursive resolver",
    homepage = "https://www.powerdns.com/recursor.html",
    license = "GPL-2.0-only",
    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc/powerdns",
        "--localstatedir=/var",
        "--enable-dns-over-tls",
        "--enable-dnstap",
        "--with-lua=luajit",
        "--with-libsodium",
        "--disable-static",
    ],
    deps = [
        "//packages/network/openssl:openssl",
        "//packages/core:musl",
        "//packages/core:zlib",
    ],
    visibility = ["PUBLIC"],
)
