# =============================================================================
# Initramfs Generation Packages
# =============================================================================
# Tools for creating initial RAM filesystem (initramfs/initrd) images.
# These are essential for booting Linux systems with complex storage setups.

# =============================================================================
# Package Groups
# =============================================================================

# All initramfs generators
filegroup(
    name = "all-initramfs-tools",
    srcs = [
        "//packages/system/initramfs/dracut:dracut",
        "//packages/system/initramfs/mkinitcpio:mkinitcpio",
        "//packages/system/initramfs/genkernel:genkernel",
        "//packages/system/initramfs/initramfs-tools:initramfs-tools",
    ],
    visibility = ["PUBLIC"],
)

# Modern/recommended initramfs generators
filegroup(
    name = "modern-initramfs",
    srcs = [
        "//packages/system/initramfs/dracut:dracut",
        "//packages/system/initramfs/mkinitcpio:mkinitcpio",
    ],
    visibility = ["PUBLIC"],
)

# Dracut (Fedora/RHEL/openSUSE default)
filegroup(
    name = "dracut-stack",
    srcs = [
        "//packages/system/initramfs/dracut:dracut",
        "//packages/system/libs/kmod:kmod",
        "//packages/system/init/eudev:eudev",
    ],
    visibility = ["PUBLIC"],
)

# mkinitcpio (Arch Linux default)
filegroup(
    name = "mkinitcpio-stack",
    srcs = [
        "//packages/system/initramfs/mkinitcpio:mkinitcpio",
        "//packages/system/initramfs/mkinitcpio:mkinitcpio-busybox",
        "//packages/system/libs/kmod:kmod",
        "//packages/system/init/eudev:eudev",
    ],
    visibility = ["PUBLIC"],
)

# genkernel (Gentoo default)
filegroup(
    name = "genkernel-stack",
    srcs = [
        "//packages/system/initramfs/genkernel:genkernel",
        "//packages/system/libs/kmod:kmod",
        "//packages/system/init/eudev:eudev",
    ],
    visibility = ["PUBLIC"],
)

# initramfs-tools (Debian/Ubuntu default)
filegroup(
    name = "initramfs-tools-stack",
    srcs = [
        "//packages/system/initramfs/initramfs-tools:initramfs-tools",
        "//packages/system/libs/kmod:kmod",
        "//packages/system/init/eudev:eudev",
    ],
    visibility = ["PUBLIC"],
)

# Base dependencies for all initramfs tools
filegroup(
    name = "initramfs-base-deps",
    srcs = [
        "//packages/system/libs/kmod:kmod",
        "//packages/system/init/eudev:eudev",
        "//packages/core:busybox",
        "//packages/core:util-linux",
        "//packages/core:coreutils",
    ],
    visibility = ["PUBLIC"],
)

# Full boot stack - everything needed to boot from initramfs
filegroup(
    name = "full-boot-stack",
    srcs = [
        # Initramfs generator (pick one)
        "//packages/system/initramfs/dracut:dracut",
        # Kernel module management
        "//packages/system/libs/kmod:kmod",
        # Device management
        "//packages/system/init/eudev:eudev",
        # Filesystem tools
        "//packages/system/filesystem/management/lvm2:lvm2",
        "//packages/system/filesystem/management/mdadm:mdadm",
        "//packages/system/filesystem/management/cryptsetup:cryptsetup",
        # Bootloader
        "//packages/boot/grub:grub",
    ],
    visibility = ["PUBLIC"],
)

# Minimal boot stack - just the essentials
filegroup(
    name = "minimal-boot-stack",
    srcs = [
        "//packages/system/initramfs/dracut:dracut",
        "//packages/system/libs/kmod:kmod",
        "//packages/system/init/eudev:eudev",
        "//packages/boot/grub:grub",
    ],
    visibility = ["PUBLIC"],
)
