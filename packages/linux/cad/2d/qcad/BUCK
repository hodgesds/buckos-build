load("//defs:package_defs.bzl", "download_source", "ebuild_package")

download_source(
    name = "qcad-src",
    src_uri = "https://github.com/qcad/qcad/archive/refs/tags/v3.29.6.0.tar.gz",
    sha256 = "4ebc3cd71825da06c27e8958fb66a3345e8ca310c7cf2811cff01b76a5dc778d",
)

ebuild_package(
    name = "qcad",
    source = ":qcad-src",
    version = "3.29.6.0",
    description = "Professional CAD system for 2D drafting and design with DXF/DWG support",
    homepage = "https://qcad.org/",
    license = "GPL-3.0",
    src_configure = """
qmake qcad.pro \\
    PREFIX=/usr \\
    CONFIG+=release
""",
    src_compile = """
emake
""",
    src_install = """
emake INSTALL_ROOT="${DESTDIR}" install
""",
    rdepend = [
        "//packages/linux/dev-libs/boost:boost",
    ],
    visibility = ["PUBLIC"],
)
