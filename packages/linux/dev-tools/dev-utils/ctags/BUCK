load("//defs:package_defs.bzl", "download_source", "configure_make_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

autotools_package(
    name = "ctags",
    version = "6.1.0",
    src_uri = "https://github.com/universal-ctags/ctags/releases/download/v6.1.0/universal-ctags-6.1.0.tar.gz",
    sha256 = "fa3bafbd0dab0373c0c1788c79451bad4eed2095ad292a8dd46cc1ae6997b2c5",
    description = "Universal Ctags - generates tag files for source code",
    homepage = "https://ctags.io/",
    license = "GPL-2+",

    # USE flags this package supports
    iuse = [
        "json",
        "yaml",
        "xml",
        "pcre2",
    ],

    # Default USE flags
    use_defaults = ["json", "yaml"],

    # Conditional configure arguments
    use_configure = {
        "json": "--enable-json",
        "-json": "--disable-json",
        "yaml": "--enable-yaml",
        "-yaml": "--disable-yaml",
        "xml": "--enable-xml",
        "-xml": "--disable-xml",
        "pcre2": "--enable-pcre2",
        "-pcre2": "--disable-pcre2",
    },

    visibility = ["PUBLIC"],
)
