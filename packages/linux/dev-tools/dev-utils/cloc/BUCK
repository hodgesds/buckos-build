load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# cloc - Count lines of code
download_source(
    name = "cloc-src",
    src_uri = "https://github.com/AlDanial/cloc/releases/download/v2.06/cloc-2.06.tar.gz",
    sha256 = "84ff92691f909a05b224e1c56abb4864f01b4f8e3c854e4bb4c7baf1d3f6d652",
)

configure_make_package(
    name = "cloc",
    source = ":cloc-src",
    version = "2.06",
    description = "Count blank lines, comment lines, and physical lines of source code",
    homepage = "https://github.com/AlDanial/cloc",
    license = "GPL-2.0",
    configure_args = [],
    make_args = [
        "prefix=/usr",
    ],
    deps = [
        "//packages/linux/lang/perl:perl",
    ],
    visibility = ["PUBLIC"],
)
