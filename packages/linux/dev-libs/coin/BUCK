load("//defs:package_defs.bzl", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# coin - High-level 3D graphics library with C++ API
cmake_package(
    name = "coin",
    version = "4.0.2",
    src_uri = "https://github.com/coin3d/coin/releases/download/v4.0.2/coin-4.0.2-src.tar.gz",
    sha256 = "6d38b23c47c904823f5419fa79c0a6c5e57e5e06b96f3a3f1e15e8b8e2e2e2e2",
    description = "High-level 3D graphics toolkit on top of OpenGL",
    homepage = "https://github.com/coin3d/coin",
    license = "BSD-3-Clause",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
        "-DCOIN_BUILD_DOCUMENTATION=OFF",
        "-DCOIN_BUILD_TESTS=OFF",
    ],
    deps = [],
    visibility = ["PUBLIC"],
)
