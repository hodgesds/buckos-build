load("//defs:package_defs.bzl", "download_source", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

# cloc - Count lines of code
# cloc is a Perl script with Makefile in Unix/ subdirectory
download_source(
    name = "cloc-src",
    src_uri = "https://github.com/AlDanial/cloc/releases/download/v2.06/cloc-2.06.tar.gz",
    sha256 = "27b6b007a5d482e5f50b23984cbe10f6a9f26e1052e9c7e010edfdcf879dc554",
    signature_required = False,
)

autotools_package(
    name = "cloc",
    source = ":cloc-src",
    version = "2.06",
    description = "Count blank lines, comment lines, and physical lines of source code",
    homepage = "https://github.com/AlDanial/cloc",
    license = "GPL-2.0",
    pre_configure = "true",  # No configure script - cloc is a Perl script
    src_compile = "true",  # No compilation needed
    src_install = """
# Install cloc script
mkdir -p "$DESTDIR/usr/bin"
cp cloc "$DESTDIR/usr/bin/"
chmod +x "$DESTDIR/usr/bin/cloc"

# Install man page if present
if [ -d Unix ]; then
    cd Unix
    if [ -f cloc.1 ]; then
        mkdir -p "$DESTDIR/usr/share/man/man1"
        cp cloc.1 "$DESTDIR/usr/share/man/man1/"
    fi
fi
""",
    deps = [
        "//packages/linux/lang/perl:perl",
    ],
    visibility = ["PUBLIC"],
)
