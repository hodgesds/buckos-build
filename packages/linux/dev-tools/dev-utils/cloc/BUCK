load("//defs:package_defs.bzl", "download_source", "configure_make_package")

# cloc - Count lines of code
download_source(
    name = "cloc-src",
    src_uri = "https://github.com/AlDanial/cloc/releases/download/v2.00/cloc-2.00.tar.gz",
    sha256 = "688b9ed8f8e8f2d9e7e5f5c7f8a0b1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7c3",
)

configure_make_package(
    name = "cloc",
    source = ":cloc-src",
    version = "2.00",
    description = "Count lines of code",
    homepage = "https://github.com/AlDanial/cloc",
    license = "GPL-2",
    configure_args = [],
    install_args = [
        "prefix=/usr",
    ],
    deps = [
        "//packages/linux/lang/perl",
    ],
    visibility = ["PUBLIC"],
)
