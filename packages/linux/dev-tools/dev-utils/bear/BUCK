    cmake_args = [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DENABLE_UNIT_TESTS=OFF",
        "-DENABLE_FUNC_TESTS=OFF",
    ],
    visibility = ["PUBLIC"],
