load("//defs:package_defs.bzl", "download_source", "configure_make_package")

# atuin - Magical shell history (Rust-based)
download_source(
    name = "atuin-src",
    src_uri = "https://github.com/atuinsh/atuin/archive/refs/tags/v18.4.0.tar.gz",
    sha256 = "PLACEHOLDER_HASH",
)

configure_make_package(
    name = "atuin",
    source = ":atuin-src",
    version = "18.4.0",
    description = "Magical shell history - sync, search and backup",
    homepage = "https://atuin.sh/",
    license = "MIT",
    build_in_source = True,
    configure_args = [],
    make_args = [
        "release",
    ],
    install_args = [
        "PREFIX=/usr",
    ],
    deps = [
        "//packages/linux/core:musl",
    ],
    visibility = ["PUBLIC"],
)
