load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

# github-cli - GitHub CLI tool (Go build)
# USE flags: doc, bash-completion
# Default: bash-completion

download_source(
    name = "github-cli-src",
    src_uri = "https://github.com/cli/cli/archive/refs/tags/v2.43.1.tar.gz",
    sha256 = "d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0e1",
)

configure_make_package(
    name = "github-cli",
    source = ":github-cli-src",
    version = "2.43.1",
    description = "GitHub's official command line tool",
    homepage = "https://cli.github.com",
    license = "MIT",
    build_system = "go",
    build_commands = [
        "make",
    ],
    install_commands = [
        "make install prefix=${DESTDIR}/usr",
    ],
    deps = [
        "//packages/linux/lang/go:go",
    ],
    visibility = ["PUBLIC"],
)
