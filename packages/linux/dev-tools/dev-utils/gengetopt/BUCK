load("//defs:package_defs.bzl", "download_source", "configure_make_package")

# gengetopt - Tool to generate C code to parse command-line arguments

download_source(
    name = "gengetopt-src",
    src_uri = "https://ftp.gnu.org/gnu/gengetopt/gengetopt-2.23.tar.xz",
    sha256 = "c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6",
)

configure_make_package(
    name = "gengetopt",
    source = ":gengetopt-src",
    version = "2.23",
    description = "Tool to generate C code to parse command-line arguments",
    homepage = "https://www.gnu.org/software/gengetopt/",
    license = "GPL-3.0-or-later",
    configure_args = [
        "--prefix=/usr",
    ],
    deps = [
        "//packages/linux/core:musl",
    ],
    visibility = ["PUBLIC"],
)
