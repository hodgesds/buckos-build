load("//defs:package_defs.bzl", "cmake_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags")

# yajl 2.1.0 uses deprecated GET_TARGET_PROPERTY(... LOCATION ...) which is
# no longer supported in modern CMake (CMP0026 cannot be set to OLD).
# We patch the CMakeLists.txt files to use $<TARGET_FILE:target> generator expressions.
cmake_package(
    name = "yajl",
    version = "2.1.0",
    src_uri = "https://github.com/lloyd/yajl/archive/refs/tags/2.1.0.tar.gz",
    sha256 = "3fb73364a5a30efe615046d07e6db9d09fd2b41c763c5f7d3bfb121cd5c5ac5a",
    signature_required = False,
    description = "Yet Another JSON Library - A fast streaming JSON parser",
    homepage = "https://lloyd.github.io/yajl/",
    license = "ISC",
    src_prepare = """
# Patch reformatter/CMakeLists.txt to use modern CMake syntax
# The line is: GET_TARGET_PROPERTY(binPath json_reformat LOCATION)
sed -i 's/GET_TARGET_PROPERTY(binPath json_reformat LOCATION)/set(binPath $<TARGET_FILE:json_reformat>)/' reformatter/CMakeLists.txt

# Patch verify/CMakeLists.txt to use modern CMake syntax
# The line is: GET_TARGET_PROPERTY(binPath json_verify LOCATION)
sed -i 's/GET_TARGET_PROPERTY(binPath json_verify LOCATION)/set(binPath $<TARGET_FILE:json_verify>)/' verify/CMakeLists.txt
""",
    cmake_args = [
        "-DCMAKE_INSTALL_PREFIX=/usr",
        "-DCMAKE_BUILD_TYPE=Release",
    ],
    visibility = ["PUBLIC"],
)
