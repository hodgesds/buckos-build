load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "pdns-recursor",
    version = "5.0.2",
    src_uri = "https://downloads.powerdns.com/releases/pdns-recursor-5.0.2.tar.bz2",
    sha256 = "e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5f6a7b8c9d0e1f2",

    iuse = ["ssl", "dnstap", "lua", "sodium"],
    use_defaults = ["ssl", "dnstap", "lua", "sodium"],

    use_deps = {
        "ssl": ["//packages/linux/network/openssl:openssl"],
    },

    use_configure = {
        "dnstap": "--enable-dnstap",
        "-dnstap": "--disable-dnstap",
        "ssl": "--enable-dns-over-tls",
        "-ssl": "--disable-dns-over-tls",
        "lua": "--with-lua=luajit",
        "-lua": "--without-lua",
        "sodium": "--with-libsodium",
        "-sodium": "--without-libsodium",
    },

    configure_args = [
        "--prefix=/usr",
        "--sysconfdir=/etc/powerdns",
        "--localstatedir=/var",
        "--disable-static",
    ],

    deps = [
        "//packages/linux/core/zlib:zlib",
    ],

    description = "PowerDNS recursive resolver",
    homepage = "https://www.powerdns.com/recursor.html",
    license = "GPL-2.0-only",
    visibility = ["PUBLIC"],
)
