load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

use_package(
    name = "jemalloc",
    version = "5.3.0",
    src_uri = "https://github.com/jemalloc/jemalloc/releases/download/5.3.0/jemalloc-5.3.0.tar.bz2",
    sha256 = "2db82d1e7119df3e71b7640219b6dfe84789bc0537983c3b7ac4f7189aecfeaa",
    description = "General-purpose scalable concurrent malloc implementation",
    homepage = "https://jemalloc.net/",
    license = "BSD-2-Clause",

    iuse = ["prof", "static-libs", "debug"],
    use_defaults = ["prof"],
    use_configure = {
        "prof": "--enable-prof",
        "-prof": "--disable-prof",
        "static-libs": "--enable-static",
        "-static-libs": "--disable-static",
        "debug": "--enable-debug",
        "-debug": "--disable-debug",
    },

    visibility = ["PUBLIC"],
)
