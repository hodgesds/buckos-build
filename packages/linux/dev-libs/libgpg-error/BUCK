load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# libgpg-error - Error code library for GnuPG components
download_source(
    name = "libgpg-error-src",
    src_uri = "https://www.gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-1.50.tar.bz2",
    sha256 = "69405349e0a633e444a28c5b35ce8f14484684518a508dc48a089992fe93bae6",
)

configure_make_package(
    name = "libgpg-error",
    source = ":libgpg-error-src",
    version = "1.50",
    description = "Error codes for GnuPG and related software",
    homepage = "https://www.gnupg.org/",
    license = "LGPL-2.1+",
    configure_args = [
        "--disable-static",
        "--enable-shared",
    ],
    deps = [],
    visibility = ["PUBLIC"],
)
