load("//defs:package_defs.bzl", "download_source", "configure_make_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags")

# cracklib - Password checking library
download_source(
    name = "cracklib-src",
    src_uri = "https://github.com/cracklib/cracklib/releases/download/v2.10.3/cracklib-2.10.3.tar.xz",
    sha256 = "1d1b83676b5673051b9373e1ca0db81c1fa88faf9a195a3c1af984fd9c250d66",
)

configure_make_package(
    name = "cracklib",
    source = ":cracklib-src",
    version = "2.10.3",
    description = "Library for enforcing strong passwords",
    homepage = "https://github.com/cracklib/cracklib",
    license = "LGPL-2.1",
    configure_args = [
        "--prefix=/usr",
        "--with-default-dict=/usr/share/cracklib/pw_dict",
        "--disable-static",
    ],
    deps = [
        "//packages/linux/core:musl",
        "//packages/linux/core:zlib",
    ],
    visibility = ["PUBLIC"],
)
