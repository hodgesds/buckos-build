load("//defs:package_defs.bzl", "download_source", "configure_make_package")

download_source(
    name = "subversion-src",
    src_uri = "https://archive.apache.org/dist/subversion/subversion-1.14.3.tar.bz2",
    sha256 = "949efd451a09435f7e8573574c71c7b71b194d844890fa49cd61d2262ea1a440",
)

configure_make_package(
    name = "subversion",
    source = ":subversion-src",
    version = "1.14.3",
    description = "Enterprise-class centralized version control for the masses",
    homepage = "https://subversion.apache.org/",
    license = "Apache-2.0",
    configure_args = [
        "--with-apr=/usr",
        "--with-apr-util=/usr",
        "--with-serf=/usr",
        "--with-zlib=/usr",
        "--with-sqlite=/usr",
        "--disable-static",
    ],
    deps = [
        "//packages/core/zlib:zlib",
        "//packages/network/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
