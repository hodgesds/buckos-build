load("//defs:package_defs.bzl", "download_source", "cmake_package")
load("//defs:use_flags.bzl", "use_package", "set_use_flags", "use_dep")

download_source(
    name = "xxhash-src",
    src_uri = "https://github.com/Cyan4973/xxHash/archive/refs/tags/v0.8.2.tar.gz",
    sha256 = "baee0c6afd4f03165de7a4e67988d16f0f2b257b51f0e8e9b75ff8e84e6b1445",
)

cmake_package(
    name = "xxhash",
    srcs = [":xxhash-src"],
    version = "0.8.2",
    description = "Extremely fast non-cryptographic hash algorithm",
    homepage = "https://cyan4973.github.io/xxHash/",
    license = "BSD-2-Clause",
    source_dir = "cmake_unofficial",
    cmake_args = [
        "-DBUILD_SHARED_LIBS=ON",
    ],
    visibility = ["PUBLIC"],
)
