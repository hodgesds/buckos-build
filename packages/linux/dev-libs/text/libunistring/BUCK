load("//defs:package_defs.bzl", "download_source", "autotools_package", "autotools_package")
load("//defs:use_flags.bzl", "set_use_flags", "use_dep")

download_source(
    name = "libunistring-src",
    src_uri = "https://mirrors.kernel.org/gnu/libunistring/libunistring-1.2.tar.xz",
    sha256 = "632bd65ed74a881ca8a0309a1001c428bd1cbd5cd7ddbf8cedcd2e65f4dcdc44",
)

autotools_package(
    name = "libunistring",
    source = ":libunistring-src",
    version = "1.2",
    description = "Library for manipulating Unicode strings",
    homepage = "https://www.gnu.org/software/libunistring/",
    license = "LGPL-3.0+",
    configure_args = [
        "--disable-static",
    ],
    visibility = ["PUBLIC"],
)
